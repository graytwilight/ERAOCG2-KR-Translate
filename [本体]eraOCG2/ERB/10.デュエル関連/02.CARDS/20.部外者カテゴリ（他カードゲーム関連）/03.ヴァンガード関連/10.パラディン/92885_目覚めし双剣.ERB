@CARDNAME_92885,参照先
;ココで지정카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 눈을 뜬 쌍검
	CASE "略称"
		RESULTS = 눈을 뜬 쌍검
	CASE "カテゴリ"
		RESULTS:0 = 블래스터 블레이드
		RESULTS:1 = 블래스터 다크
		RESULTS:4 = 뱅가드
ENDSELECT


@CARD_92885(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "외부자"
		RETURN 1
	CASE "종류"
		RETURN 通常함정
ENDSELECT

RETURN 0

@CARD_EXPLANATION_92885(종류)
#DIM DYNAMIC 종류

PRINTL このカード名の①②の효과はそれぞれ１ターンに１度しか使用できない。
PRINTL 자신フィールドに「블래스터 블레이드」か「블래스터 다크」が存在する場合、このカードはセットしたターンでも발동できる。
CALLFORM CARD_ABLE(1,마함起動,손패起動,フリー誘発)
PRINTL ①：자신の덱・묘지・제외状態の「블래스터 블레이드」か「블래스터 다크」１体を특수소환する。
PRINTL その後、以下の효과を適用できる。
PRINTL ●자신の손패・フィールドのモンスターを융합素材とし、융합モンスター１体を융합소환する。
CALLFORM CARD_ABLE(2,묘지起動)
PRINTL ②：このカードが묘지に存在する場合、자신メインフェイズに자신の묘지の융합モンスター１体を대상として발동できる。
PRINTL そのモンスターをEX덱に戻す。その後、このカードを자신フィールドにセットする。
PRINTL この효과でセットしたこのカードは、フィールドから離れた場合に제외される。


@CARDCAN_92885(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,92885)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == フリー誘発
	SIF ゾーン != "마함"
		RETURN 0
	SIF 발동済_1(듀얼리스트,92885)
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과範囲묘지 = 1
	효과範囲제외 = 1
	효과条件名前:0 = 블래스터 블레이드
	효과条件名前:1 = 블래스터 다크
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件名前:0 = 블래스터 블레이드
	효과条件名前:1 = 블래스터 다크
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3 && RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 묘지起動
	SIF 발동済_2(듀얼리스트,92885)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF 마함数(듀얼리스트) >= 5
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件종류 = 융합
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF



@CARDEFFECT_92885(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 選択カード
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 마함起動 || (종류 == フリー誘発 && ゾーン == "마함")
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,92885,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		효과範囲덱 = 1
		효과範囲묘지 = 1
		효과範囲제외 = 1
		효과条件名前:0 = 블래스터 블레이드
		효과条件名前:1 = 블래스터 다크
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			CALL RESETAREA_MAT
			素材範囲필드 = 1
			素材範囲손패 = 1
			CALL FULLRESET
			효과範囲EX덱 = 1
			효과条件종류 = 융합
			효과条件소환可 = 1
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			IF RESULT == 1
				CALL RESETAREA_MAT
				素材範囲필드 = 1
				素材範囲손패 = 1
				CALL FULLRESET
				효과範囲EX덱 = 1
				효과条件종류 = 융합
				효과条件소환可 = 1
				효과条件任意 = 1
				CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
				選択カード = RESULT
				IF 選択カード != 9999
					TRYCALLFORM CARDSUMMON_{GETVAR(@"%듀얼리스트%_EX덱:{選択カード}")}(듀얼리스트,選択カード)
					CALL FUSSUMMON(듀얼리스트,選択カード)
				ENDIF
			ENDIF
		ENDIF
	ENDIF
ELSEIF 종류 == 묘지起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,92885,2)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件종류 = 융합
		효과条件行先플래그 = 덱行き
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			효과範囲묘지 = 1
			효과추가종류 = 500
			효과条件名前 = 눈을 뜬 쌍검
			CALL CARD_SET_ADV(듀얼리스트,ゾーン,場所,"裏側표시")
		ENDIF
	ENDIF
ENDIF
