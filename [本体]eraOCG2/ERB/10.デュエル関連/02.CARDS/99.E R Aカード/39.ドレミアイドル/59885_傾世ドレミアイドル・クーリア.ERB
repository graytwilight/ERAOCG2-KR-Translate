@CARDSUMMON_59885(듀얼리스트,소환カード,EX参照)
#DIMS DYNAMIC 듀얼리스트
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 소환カード
#DIM DYNAMIC EX参照
;素材条件

CALL RESETCONDITION_MAT
必要レベル数 = 8
IF EX参照 == 0 || EX参照 == 1
	素材条件튜너 = 1
	素材条件종족 = 천사족
ELSEIF EX参照 >= 10
	素材条件튜너 = -1
ENDIF

IF EX参照 == 1
	CALL SYNCAN(듀얼리스트,소환カード,59885) 
	RETURN RESULT
ENDIF


@CARDCAN_59885(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,59885)
SIF RESULT == 1
	RETURN 0

IF 종류 == 특수소환時 || 종류 == EX소환時
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과条件표시 = 表側표시
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 효과後誘発
	SIF ゾーン != "필드"
		RETURN 0
	CALL FULLRESET
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"소환全般",1)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲EX덱 = 1
	효과条件カテゴリ = 도레미코드
	효과条件종류 = EX以外全般
	CALL 효과条件レベル_ADV(3, "以下")
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲EX덱 = 1
	효과条件カテゴリ = 도레미코드
	효과条件종류 = EX以外全般
	CALL 효과条件レベル_ADV(4, "以上")
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0

		IF 듀얼리스트 == "상대"
		;CPU 輔助
		TRYCALLFORM CARD_{자신_MZ_ID:FINAL_SUMMON_TARGET(듀얼리스트,1)}("종류")
		IF MATCH(RESULTS,"通常モン")
			RETURN 0
		ELSEIF MATCH(RESULTS,"효과モン") && RAND:3 == 0
			RETURN 0
		ELSEIF RAND:5 == 0
			RETURN 0
		ENDIF
	ENDIF

	RETURN 1

ELSEIF 종류 == ターン開始時
	SIF ゾーン != "필드"
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF 마함数(対面者) == 0
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과条件カテゴリ:0 = 큐티아최애
	효과条件カテゴリ:1 = 드리미아최애
	효과条件カテゴリ:2 = 엘리티아최애
	효과条件カテゴリ:3 = 팬시아최애
	효과条件カテゴリ:4 = 그레이시아최애
	효과条件カテゴリ:5 = 엔제리아최애
	효과条件カテゴリ:6 = 뷰티아최애
	효과条件カテゴリ:7 = 쿨리아최애
	효과条件カテゴリ:8 = 뮤제시아최애
	효과条件カテゴリ:9 = 도레미 하코오시
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == ターン終了時強制
	SIF ゾーン != "필드"
		RETURN 0
	SIF モンスター数(듀얼리스트) != 1
		RETURN 0
	SIF モンスター数(対面者) != 1
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과条件カテゴリ:0 = 쿨리아최애
	효과条件カテゴリ:1 = 도레미 하코오시
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_59885(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択場所
#DIM DYNAMIC レベル
#DIM DYNAMIC 조교대상
#DIM DYNAMIC 実行役대상

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 특수소환時 || 종류 == EX소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,59885,1)
	IF RESULT == 0
		CALL FULLRESET
		효과条件표시 = 表側표시
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"상대필드",ゾーン,場所)
		選択場所 = RESULT
		조교대상 = NO_TO_CHARANUM(2085)
		CALL Doremi_fans(듀얼리스트,選択場所,조교대상,"登場")
	ENDIF

ELSEIF 종류 == 발동誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,59885,2)
	IF RESULT == 0
		カウンタ = 0
		CALL FULLRESET
		효과範囲EX덱 = 1
		효과条件カテゴリ = 도레미코드
		효과条件종류 = EX以外全般
		CALL 효과条件レベル_ADV(3, "以下")
		효과条件行先플래그 = 덱行き
		CALL CARD_ADD_GY_BASIC(듀얼리스트,"EX덱",ゾーン,場所)
		SIF RESULT != 9999
			カウンタ++
		CALL FULLRESET
		효과範囲EX덱 = 1
		효과条件カテゴリ = 도레미코드
		효과条件종류 = EX以外全般
		CALL 효과条件レベル_ADV(4, "以上")
		효과条件行先플래그 = 덱行き
		CALL CARD_ADD_GY_BASIC(듀얼리스트,"EX덱",ゾーン,場所)
		SIF RESULT != 9999
			カウンタ++	

		IF カウンタ == 2
			選択場所 = FINAL_SUMMON_TARGET(듀얼리스트,1)
			조교대상 = NO_TO_CHARANUM(2085)
			CALL Doremi_fans(듀얼리스트,選択場所,조교대상,"公演")
		ENDIF
	ENDIF

ELSEIF 종류 == ターン開始時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,59885,3)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,EX덱行き)

		CALL FULLRESET
		효과範囲상대필드 = 1
		효과条件カテゴリ:0 = 큐티아최애
		효과条件カテゴリ:1 = 드리미아최애
		효과条件カテゴリ:2 = 엘리티아최애
		효과条件カテゴリ:3 = 팬시아최애
		효과条件カテゴリ:4 = 그레이시아최애
		효과条件カテゴリ:5 = 엔제리아최애
		효과条件カテゴリ:6 = 뷰티아최애
		효과条件カテゴリ:7 = 쿨리아최애
		효과条件カテゴリ:8 = 뮤제시아최애
		효과条件カテゴリ:9 = 도레미 하코오시
		효과条件CNT = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		カウンタ = RESULT
		CALL FULLRESET
		효과条件複数 = 100 -カウンタ
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"마함単体",場所,"묘지")
		CALL Doremi_business(듀얼리스트,2085)
	ENDIF

ELSEIF 종류 == ターン終了時強制
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,59885)
	IF RESULT == 0
		조교대상 = NO_TO_CHARANUM(2085)
		CALL Doremi_FansAttack(듀얼리스트,조교대상,場所)
	ENDIF
ENDIF
