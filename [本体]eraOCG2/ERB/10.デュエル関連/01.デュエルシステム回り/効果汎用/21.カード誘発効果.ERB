	CALL CARD_FILTER_SET(대상듀얼리스트,대상ゾーン,대상場所,듀얼리스트)
	SIF RESULT == 1
		条件달성 = 1
ENDIF
;PRINTFORML ここ通過４.3：条件달성:{条件달성}

SIF 条件달성 == 1
	RETURN 1

IF 対面플래그 == 2 && 実行者 != 対面者
	実行者 = %対面者%
	대상듀얼리스트 = %対面者%
	GOTO REPEAT_LOOP
ENDIF

RETURN 0



