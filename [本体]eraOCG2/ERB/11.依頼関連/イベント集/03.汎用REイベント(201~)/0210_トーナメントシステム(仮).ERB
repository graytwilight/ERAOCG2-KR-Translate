			ELSE
				PRINTFORM %"",8,LEFT%├ 👑ＶＩＣＴＯＲＹ👑
			ENDIF
		ENDSELECT


		PRINTL
		IF 승리数 >= 1
			SIF 大会対戦結果:カウンタ != 승리数
				SETCOLOR C_GRAY
		ENDIF
		TRYCALLFORM DUELDECK_{対戦상대덱:カウンタ}("存在確認")
