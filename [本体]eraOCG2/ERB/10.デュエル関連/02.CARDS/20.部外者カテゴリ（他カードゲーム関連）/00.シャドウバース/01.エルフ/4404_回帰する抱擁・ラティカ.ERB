@CARDCAN_4404(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,4404)
SIF RESULT == 1
	RETURN 0

IF 종류 == 손패起動 || 종류 == フリー誘発
	SIF ゾーン != "손패"
		RETURN 0
	SIF 발동済_1(듀얼리스트,4404)
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,4404,"손패")
	SIF RESULT == 1
		RETURN 0

	SIF GETVAR(@"%ターンプレイヤー%_발동数") < 4
		RETURN 0

	SIF メインフェイズ != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 소환時 || 종류 == 특수소환時
	SIF 발동済_2(듀얼리스트,4404)
		RETURN 0
	RETURN 1
ELSEIF 종류 == 효과後強制誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_条達:場所") != 0
		RETURN 0
	SIF GETVAR(@"%ターンプレイヤー%_발동数") < 8
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_4404(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 守備力修正
#DIM DYNAMIC 攻撃力판정

攻撃力판정 = -1

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 손패起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4404,1)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_SP_SUMMON(듀얼리스트,"손패",場所)
	ENDIF
ELSEIF 종류 == 소환時 || 종류 == 특수소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4404,2)
	IF RESULT == 0
		CALL FULLRESET
		효과条件표시 = 表側표시
		효과추가종류 = 13
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"永攻DOWN",800)

	ENDIF
ELSEIF 종류 == 효과後強制誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4404,3)
	IF RESULT == 0
		選択カード = -1
		CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"条達",2,1)
		CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"永攻",600)
		CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"永守",600)
		FOR カウンタ,0,5
			SIF GETVAR(@"%対面者%_필드:カウンタ") == -1
				CONTINUE
			SIF GETVAR(@"%対面者%_MZ_表:カウンタ") == 3
				CONTINUE
			IF 攻撃力판정 < GETVAR(@"%対面者%_MZ_攻:カウンタ")
				攻撃力판정 = GETVAR(@"%対面者%_MZ_攻:カウンタ")
				選択カード = カウンタ
			ENDIF
		NEXT
		IF 選択カード >= 0
			CALL FULLRESET
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"自動処理",選択カード,"묘지")
		ENDIF
		SETVAR @"%듀얼리스트%_발동数" , GETVAR(@"%듀얼리스트%_발동数") + 1
	ENDIF
ENDIF
