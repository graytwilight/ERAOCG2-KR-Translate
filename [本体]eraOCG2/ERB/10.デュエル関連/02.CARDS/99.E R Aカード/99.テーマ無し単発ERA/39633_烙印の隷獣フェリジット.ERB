@CARDNAME_39633,参照先
;ココで지정カードの名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 낙인의 노예짐승 페리지트
	CASE "略称"
		RESULTS = 노예짐승페리지트
	CASE "カテゴリ"
		RESULTS:0 = 낙인
		RESULTS:1 = 비스테드
		RESULTS:2 = 트라이브리게이드
		RESULTS:3 = E.R.A
ENDSELECT


@CARD_39633(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 효과モン
	CASE "속성"
		RETURN 어둠속성
	CASE "종족"
		RETURN 야수족
	CASE "レベル"
		RETURN 4
	CASE "攻撃力"
		RETURN 0
	CASE "守備力"
		RETURN 0
	CASE "튜너"
		RETURN 1
	CASE "성별"
		RETURN 牝性
	CASE "別途ID"
		RETURN 1890
	CASE "連動ID"
		RETURN 1890
	CASE "추가日"
		RETURN 250920
ENDSELECT

RETURN 0

@CARD_EXPLANATION_39633(종류)
#DIM DYNAMIC 종류

CALL TEXT_DECORATION("ROGUE")
PRINTL このカードのカード名はルール上、「트라이브리게이드 도화 페리지트」としても扱う。
PRINTL このカードは「비스테드の母体」でもある。
PRINTL このカード名の①②の효과はそれぞれ１ターンに１度しか使用できない。
CALLFORM CARD_ABLE(1,손패起動,필드起動)
PRINTL ①：このカードが손패・モンスターゾーンに存在する場合に발동できる。
PRINTL このカードを「種袋」として자신の마법＆함정ゾーンに置き、
PRINTL その後、フィールドの雄性モンスター１体につき、このカードに種카운터を１つ置く。
CALLFORM CARD_ABLE(2,마함起動)
PRINTL ②：자신・상대ターンにこのカードが마법＆함정ゾーンに「種袋」として存在する場合に발동できる。
PRINTL 자신の손패・덱からレベル６以上の「비스테드」モンスター１体を특수소환する。
PRINTL その後、このカードから種카운터を１つ取り除く。
PRINTL 種카운터が無かった場合、代わりにこのカードを破壊する。
CALLFORM CARD_ABLE(0,ターン終了時強制)
PRINTL ③：자신・상대のエンドフェイズにこのカードが마법＆함정ゾーンに「種袋」として存在する場合に발동する。
PRINTL フィールドの雄性モンスター１体につき、このカードに種카운터を１つ置く。
PRINTL その後、このカードに置かれた種카운터が２つ以上の場合、덱から「트라이브리게이드 키트」１体を묘지へ送る。
CALL TEXT_DECORATION("ROGUE")




@CARDCAN_39633(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 装備先
#DIMS DYNAMIC 装備者
#DIM DYNAMIC 条件달성
#DIM DYNAMIC カウンタ

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL 装備판정(듀얼리스트,場所,ゾーン)
装備者 = %RESULTS%
装備先 = RESULT

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,39633)
SIF RESULT == 1
	RETURN 0

IF 종류 == 손패起動 || 종류 == 필드起動
	SIF 발동済_1(듀얼리스트,39633)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF 마함数(듀얼리스트) >= 5
		RETURN 0
	RETURN 1
ELSEIF 종류 == 마함起動 || 종류 == フリー誘発
	SIF 발동済_2(듀얼리스트,39633)
		RETURN 0
	SIF !GROUPMATCH(ゾーン,"마함")
		RETURN 0
	SIF GETVARS(@"%듀얼리스트%_魔_追カテ:場所") != "種袋"
		RETURN 0
	CALL FULLRESET
	효과範囲손패 = 1
	효과範囲덱 = 1
	효과条件カテゴリ = 비스테드
	CALLFORM 효과条件レベル_ADV(6,"以上")
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == ターン終了時強制
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVARS(@"%듀얼리스트%_魔_追カテ:場所") != "種袋"
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲상대필드 = 1
	효과条件성별 = 雄性
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
; ELSEIF 종류 == リアクション효과
; 	SIF ゾーン != "마함"
; 		RETURN 0
;	SIF GETVARS(@"%듀얼리스트%_魔_追カテ:場所") != "種袋"
;		RETURN 0
; 	RETURN 1
ENDIF

@CARDEFFECT_39633(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 조교대상
#DIM DYNAMIC 装備先
#DIM DYNAMIC 설치先
#DIMS DYNAMIC 装備者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL 装備판정(듀얼리스트,場所,ゾーン)
装備者 = %RESULTS%
装備先 = RESULT

IF 종류 == 손패起動 || 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,39633,1)
	IF RESULT == 0
		설치先 = 現마함(듀얼리스트)
		CALL FULLRESET
		효과추가カテ = 種袋
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,마함行き)
		IF RESULT == 1
			CALL FULLRESET
			효과範囲필드 = 1
			효과範囲상대필드 = 1
			효과条件성별 = 雄性
			효과条件CNT = 1
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			カウンタ = RESULT
			IF カウンタ
				SETCOLOR C_PINK
				PRINTFORML >>——MESSAGE:——————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————>>>
				PRINTFORML
				PRINTFORML 낙인의 권유를 따라、페리지트는 필드의 수컷에게서 씨앗을 집어넣는다。
				PRINTFORML
				RESETCOLOR
				FOR 装備先,0,カウンタ
					CALL EROTIC_MOVE("前穴凌辱",NO_TO_CHARANUM(1890),,100)
					CALL FULLRESET
					CALL SET_FIELD_INFO(듀얼리스트,"마함",설치先,"個Ｃ",1)
				NEXT
			ENDIF
		ENDIF
	ENDIF
ELSEIF 종류 == 마함起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,39633,2)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲손패 = 1
		효과範囲덱 = 1
		효과条件カテゴリ = 비스테드
		CALLFORM 효과条件レベル_ADV(6,"以上")
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			PRINTFORML
			SETCOLOR C_PINK
			PRINTFORML >>——MESSAGE:——————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————>>>
			RESETCOLOR
			PRINTFORML
			PRINTFORML 페리지트를 모체로、비스테드 몬스터가 태어난다！
			RESETCOLOR
			PRINTFORML 
			CALL EROTIC_MOVE("疑似出産",NO_TO_CHARANUM(1890),,100)

			IF GETVAR(@"%듀얼리스트%_魔_個Ｃ:場所") == 0
				PRINTFORML
				SETCOLOR C_RED
				PRINTFORML >>——MESSAGE:——————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————>>>
				RESETCOLOR
				PRINTFORML
				PRINTFORML 한계까지 몬스터를 낳은 페리지트는 힘이 다했다…
				RESETCOLOR
				PRINTFORML 
				CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
			ELSE
				CALL SET_FIELD_INFO(듀얼리스트,"마함",場所,"個Ｃ",-1)
			ENDIF
		ENDIF
	ENDIF
ELSEIF 종류 == ターン終了時強制
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲상대필드 = 1
	효과条件성별 = 雄性
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	カウンタ = RESULT
	IF カウンタ
		SETCOLOR C_PINK
		PRINTFORML >>——MESSAGE:——————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————>>>
		PRINTFORML
		PRINTFORML 낙인의 권유에 따라、페리지트는 필드의 수컷에게서 씨앗을 집어넣는다。
		PRINTFORML
		RESETCOLOR
		FOR 装備先,0,カウンタ
			CALL EROTIC_MOVE("前穴凌辱",NO_TO_CHARANUM(1890),,100)
			CALL FULLRESET
			CALL SET_FIELD_INFO(듀얼리스트,"마함",場所,"個Ｃ",1)
		NEXT
	ENDIF
	IF GETVAR(@"%듀얼리스트%_魔_個Ｃ:場所") >= 2
		CALL FULLRESET
		효과条件名前 = 트라이브리게이드 키트
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"덱",ゾーン,場所)
		選択カード = RESULT
		選択カード_ID = RESULT:99
		IF RESULT != 9999
			SETCOLOR C_PINK
			PRINTFORML >>——MESSAGE:——————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————>>>
			PRINTFORML
			PRINTFORML 낙인의 권유에 따라、페리지트는 여동생인 키트를 자신과 같은 길로 끌어냈다。
			PRINTFORMW
			IF 選択カード_ID == 1891
				CALL CARD_RECONSTRUCT(듀얼리스트,"덱",選択カード,39634)
				PRINTFORML
			ENDIF
			RESETCOLOR
			CALL CARD_DISPOSE(듀얼리스트,"덱",選択カード)
		ENDIF
	ENDIF
ENDIF
