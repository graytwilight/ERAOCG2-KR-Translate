@CARDCAN_4417(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 효과先

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,4417)
SIF RESULT == 1
	RETURN 0

IF 종류 == EX소환時 || 종류 == 특수소환時
	SIF 발동済_1(듀얼리스트,4417)
		RETURN 0
	RETURN 1
ELSEIF 종류 == 時限紋章起動
	SIF スタンバイフェイズ != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_条達:場所") != 0
		RETURN 0

	CALL FULLRESET
	효과範囲상대필드 = 1
	효과条件以攻撃力 = 2000
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	IF RESULT == 1
		SIF 발동済_1(듀얼리스트,覚醒발동)
			RETURN 0
	ENDIF
	SIF メインフェイズ != 1
		RETURN 0
	RETURN 1
ENDIF
@CARDEFFECT_4417(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 효과先

IF 종류 == EX소환時 || 종류 == 특수소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4417,1)
	IF RESULT == 0
		CALL CARD_GENERATE(듀얼리스트,144402)
		IF 발동済_D1(듀얼리스트,29032) == 0
			CALL CARD_RESERV(듀얼리스트,4417,時限紋章予約)

			CALL CARD_EFFECT_D1USE(듀얼리스트,29032)
		ENDIF
	ENDIF
ELSEIF 종류 == 時限紋章起動
	SIF 손패数(듀얼리스트) < 9
		CALL CARD_GENERATE_HAND(듀얼리스트,144402)
ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과条件以攻撃力 = 2000
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	IF RESULT == 1
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,覚醒발동)
	ELSE
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,覚醒발동,1)
	ENDIF
	IF RESULT == 0
		CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"条達",2,1)
		CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"永攻",800)
		CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"永守",800)

		CALL FULLRESET
		효과範囲상대필드 = 1
		CALL CARD_REMOVAL_ADV(듀얼리스트,"単体除去",場所,"選択")
		選択カード = RESULT:1
		IF RESULT == 1
			CALL CARD_SELECT(듀얼리스트,選択カード)
			CALL CARD_RECONSTRUCT(대상者（CS）,"필드",選択カード（CS）,144402)
		ENDIF
	ENDIF
ENDIF

