	CASE "名前"
		RESULTS = 마제스티 로드 블래스터
	CASE "略称"
		RESULTS = 마제블러
	CASE "カテゴリ"
		RESULTS:0 = 로열 팔라딘
		RESULTS:1 = 블래스터 블레이드
		RESULTS:4 = 뱅가드
ENDSELECT


