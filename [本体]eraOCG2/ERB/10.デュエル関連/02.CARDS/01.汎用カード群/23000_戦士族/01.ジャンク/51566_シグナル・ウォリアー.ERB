PRINTL この효과で특수소환したこのカードは、フィールドから離れた場合に제외される。
PRINTL ●４：상대に８００ダメージを与える。
PRINTL ●７：자신は덱から１枚ドローする。
PRINTL ●１０：フィールドのカード１枚を選んで破壊する。


@CARDCAN_51566(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 必要カード
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,51566)
SIF RESULT == 1
	RETURN 0

IF 종류 == ターン開始時強制
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1

ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 효과발동済(듀얼리스트,場所,ゾーン)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_個Ｃ:場所") < 4
		RETURN 0
	RETURN 1

ELSEIF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_個Ｃ:場所") < 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_51566(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 条件달성
#DIM DYNAMIC ランダム数

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == ターン開始時強制
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,51566)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲마함 = 1
		효과範囲상대마함 = 1
		효과条件종류 = フィールド
		효과条件CNT = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		CALL SET_FIELD_INFO(듀얼리스트,ゾーン,場所,"個Ｃ",(RESULT:9)+1)
	ENDIF

ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,51566,10)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲상대필드 = 1
		효과範囲상대마함 = 1
		효과条件除去種 = 묘지
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT == 1
			条件달성 = 1

		IF 듀얼리스트 == "자신"
			PRINTL 【取り除くシグナル카운터の数を選択】
			PRINTL
			SIF GETVAR(@"%듀얼리스트%_MZ_個Ｃ:場所") >= 4
				PRINTL [4] - 상대の８００ダメージを与える
			SIF GETVAR(@"%듀얼리스트%_MZ_個Ｃ:場所") >= 7
				PRINTL [7] - １枚ドロー
			SIF GETVAR(@"%듀얼리스트%_MZ_個Ｃ:場所") >= 10
				PRINTL [10] - フィールドのカードを１枚破壊
			PRINTL
			SIF GETVAR(@"%듀얼리스트%_MZ_個Ｃ:場所") < 4
				PRINTL [9999] - 戻る
			BINPUT
		ELSE
			RESULT = 9999
			SIF GETVAR(@"%듀얼리스트%_MZ_個Ｃ:場所") >= 4
				RESULT = 4
			SIF GETVAR(@"%듀얼리스트%_MZ_個Ｃ:場所") >= 7
				RESULT = 7
			SIF GETVAR(@"%듀얼리스트%_MZ_個Ｃ:場所") >= 10 && 条件달성 == 1
				RESULT = 10
		ENDIF

		SIF RESULT == 9999
			RETURN 0

		CALL SET_FIELD_INFO(듀얼리스트,ゾーン,場所,"個Ｃ",-RESULT)
		IF RESULT == 4
			CALL LIFE_CHANGE(듀얼리스트,"減少","효과",800,1)
		ELSEIF RESULT == 7
			CALL CARDDRAW_BASIC(듀얼리스트,1)
		ELSEIF RESULT == 10
			CALL FULLRESET
			효과範囲필드 = 1
			효과範囲마함 = 1
			효과範囲상대필드 = 1
			효과範囲상대마함 = 1
			CALL CARD_REMOVAL_ADV(듀얼리스트,"単体除去",場所,"묘지")
		ENDIF
	ENDIF
ENDIF
