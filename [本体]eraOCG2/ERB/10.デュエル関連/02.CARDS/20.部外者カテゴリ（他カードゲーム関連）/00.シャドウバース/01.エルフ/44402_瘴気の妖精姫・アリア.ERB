IF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,44402,2)
	IF RESULT == 0
		
		CALL FULLRESET
		효과範囲손패 = 1
		효과範囲필드 = 1
		효과条件レベル = 1
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
	IF RESULT == 1
		CALL FULLRESET
			효과条件カテゴリ = 요정
			효과条件종류 = 마함全般
			CALL CARD_SET_BASIC(듀얼리스트,"덱",ゾーン,場所,"裏側표시")
			CALL CARD_GENERATE_HAND(듀얼리스트,144402)
		ENDIF
	ENDIF
ELSEIF 종류 == 효과後強制誘発
	CALL LIFE_CHANGE(듀얼리스트,"減少","효과",400,1)
ELSEIF 종류 == 효과後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,44402)
	IF RESULT == 0
		효과先 = FINAL_SUMMON_TARGET(듀얼리스트)
		CALL CARD_DISPOSE(듀얼리스트,"필드",효과先,破壊行き)
	ENDIF
ENDIF

