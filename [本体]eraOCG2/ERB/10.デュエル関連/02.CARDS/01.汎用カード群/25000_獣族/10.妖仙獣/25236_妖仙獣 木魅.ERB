@CARD_EXPLANATION_25236(종류)
#DIM DYNAMIC 종류

PRINTL 이 카드명의 ①②의 효과는 각각 １턴에 １번밖에 사용할 수 없다。
CALLFORM CARD_ABLE(1,손패起動)
PRINTL ①：이 카드를 패에서 버리고 발동할 수 있다。
PRINTL 덱 / 묘지에서 "수험의 요사" １장을 골라 자신 필드에 앞면 표시로 둔다。
PRINTL 그 후、패에서 레벨４ 이하의 "요선수" 몬스터 １장의 소환을 할 수 있다。
CALLFORM CARD_ABLE(2,묘지起動, フリー誘発)
PRINTL ②：자신 / 상대 턴에 묘지의 이 카드를 제외하고 발동할 수 있다。
PRINTL 패에서 "요선수" 몬스터 １장을 특수 소환한다。

@CARDCAN_25236(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,25236)
SIF RESULT == 1
	RETURN 0

IF 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,25236)
		RETURN 0
	SIF ゾーン != "손패"
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF 마함数(듀얼리스트) > 5
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과範囲묘지 = 1
	효과条件名前 = 수험의 요사
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL CARD_DRAW_CHECK(1)
	RETURN 1
ELSEIF 종류 == 묘지起動 || 종류 == フリー誘発
	SIF 발동済_2(듀얼리스트,25236)
		RETURN 0
	SIF ゾーン != "묘지"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		RETURN 0
	CALL FULLRESET
	효과範囲손패 = 1
	효과条件カテゴリ = 요선수
	효과条件종류 = モン全般
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_25236(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カードID
#DIM DYNAMIC 戦闘カード

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,25236,1)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과範囲덱 = 1
		효과範囲묘지 = 1
		효과条件名前 = 수험의 요사
		CALL CARD_SET_ADV(듀얼리스트,ゾーン,場所,"表側표시")
		IF RESULT == 1
			CALL FULLRESET
			효과範囲손패 = 1
			효과条件カテゴリ = 요선수
			CALL 효과条件レベル_ADV(4,"以下")
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			IF RESULT == 1
				IF 듀얼리스트 == "자신"
					PRINTL 몬스터를 소환하시겠습니까？
					PRINTL [0] 예
					PRINTL [1] 아니오
					BINPUT
				ENDIF
				IF RESULT == 0 || (듀얼리스트 == "상대" && モンスター数(듀얼리스트) < 5)
					CALL FULLRESET
					효과範囲손패 = 1
					효과条件カテゴリ = 요선수
					효과条件종류 = モン全般
					CALL 효과条件レベル_ADV(4,"以下")
					CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
					選択カード = RESULT
					選択カードID = RESULT:99
					IF 選択カード != 9999
						CALL CARD_SELECT(듀얼리스트,選択カード)
						選択カード = RESULT
						CALL CARD_SUMMON_SHORI(듀얼리스트,選択カード,"攻撃표시",3)
					ENDIF
				ENDIF
			ENDIF
		ENDIF
	ENDIF
ELSEIF 종류 == 묘지起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,25236,2)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과範囲손패 = 1
		효과条件カテゴリ = 요선수
		효과条件종류 = モン全般
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
	ENDIF
ENDIF