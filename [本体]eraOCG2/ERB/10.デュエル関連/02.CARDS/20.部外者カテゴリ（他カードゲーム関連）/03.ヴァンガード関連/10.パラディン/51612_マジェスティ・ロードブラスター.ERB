PRINTL "블래스터 블레이드" "블래스터 다크"를 각각 １장까지 덱으로 되돌리고 발동할 수 있다。
PRINTL 이 카드의 공격력은、턴 종료시까지 이 효과로 덱으로 되돌린 카드의 수×１０００오른다。
PRINTL 그 후、패로 되돌린 카드의 원래 카드명에 따라 이하의 효과를 적용할 수 있다。
PRINTL ●"블래스터 블레이드"：이 카드의 전투로 상대에게 주는 데미지는 배가 된다。
PRINTL ●"블래스터 다크"：자신은 １장 드로우 한다。
CALLFORM CARD_ABLE(2,필드起動,フリー誘発)
PRINTL ③：자신 / 상대 턴에、이 카드를 릴리스하고 발동할 수 있다。
PRINTL 자신의 패 / 덱 / 묘지에서 "블래스터 블레이드"와 "블래스터 다크"를、
PRINTL 각각 １장까지 선택하고 특수 소환할 수 있다。

@CARDSUMMON_51612(듀얼리스트,소환カード,EX参照)
#DIMS DYNAMIC 듀얼리스트
#DIM DYNAMIC 소환カード
#DIM DYNAMIC EX参照
;素材条件

CALL RESETCONDITION_MAT
必要素材数 = 2

IF EX参照 == 0 || EX参照 == 1
	素材条件名前 = 블래스터 블레이드
ELSEIF EX参照 >= 10
	素材条件名前 = 블래스터 다크
ENDIF

IF EX参照 == 1
	CALL FUSCAN(듀얼리스트,소환カード,51612) 
	RETURN RESULT
ENDIF

@CARDCAN_51612(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,51612)
SIF RESULT == 1
	RETURN 0


IF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0	
	RETURN 1
ELSEIF 종류 == 攻撃時誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 발동済_1(듀얼리스트,51612)
		RETURN 0
	SIF 戦闘場所(듀얼리스트) != 場所
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲묘지 = 1
	효과条件名前:0 = 블래스터 블레이드
	효과条件名前:1 = 블래스터 다크
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 발동済_2(듀얼리스트,51612)
		RETURN 0
	CALL FULLRESET
	효과範囲손패 = 1
	효과範囲덱 = 1
	효과範囲묘지 = 1
	효과条件名前:0 = 블래스터 블레이드
	효과条件名前:1 = 블래스터 다크
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF



@CARDEFFECT_51612(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 選択カード

IF 종류 == 지속효과
	CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"対耐")
	CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"攻誘")
ELSEIF 종류 == 攻撃時誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,51612,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲필드 = 1
		효과範囲묘지 = 1
		효과条件名前 = 블래스터 블레이드
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			효과範囲필드 = 1
			효과範囲묘지 = 1
			효과条件名前 = 블래스터 블레이드
			효과条件任意 = 1
			효과条件行先플래그 = 덱行き
			CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
			IF RESULT == 1
				CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"一攻",1000)
				CALL SET_PLAYER_INFO(듀얼리스트,"ダメージ倍化",3,1)
			ENDIF
		ENDIF

		CALL FULLRESET
		효과範囲필드 = 1
		효과範囲묘지 = 1
		효과条件名前 = 블래스터 다크
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			효과範囲필드 = 1
			효과範囲묘지 = 1
			효과条件名前 = 블래스터 다크
			효과条件任意 = 1
			효과条件行先플래그 = 덱行き
			CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
			IF RESULT == 1
				CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"一攻",1000)
				CALL CARDDRAW_BASIC(듀얼리스트,1)
			ENDIF
		ENDIF
	ENDIF
ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,51612,2)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과範囲손패 = 1
		효과範囲덱 = 1
		효과範囲묘지 = 1
		효과条件名前 = 블래스터 블레이드
		효과条件任意 = 1
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)

		CALL FULLRESET
		효과範囲손패 = 1
		효과範囲덱 = 1
		효과範囲묘지 = 1
		효과条件名前 = 블래스터 다크
		효과条件任意 = 1
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
	ENDIF
ENDIF

