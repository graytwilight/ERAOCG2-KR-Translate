@CARDNAME_33009,参照先
;ココで지정カードの名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 대파괴수 조사반
	CASE "略称"
		RESULTS = 조사반
	CASE "カテゴリ"
		RESULTS:0 = 대파괴수
		RESULTS:1 = 게임 오리지널
ENDSELECT

@CARD_33009(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 효과モン
	CASE "속성"
		RETURN 빛속성
	CASE "종족"
		RETURN 사이킥족
