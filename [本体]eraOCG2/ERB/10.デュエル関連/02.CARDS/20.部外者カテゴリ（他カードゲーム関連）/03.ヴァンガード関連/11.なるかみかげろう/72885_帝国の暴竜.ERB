PRINTL 상대フィールドのカード１枚を대상として발동できる。そのカードを破壊する。

@CARDCAN_72885(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 最大링크値
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 효과使用불가,2

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,72885)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == 손패起動 || 종류 == フリー誘発
	IF ゾーン == "손패"
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	ELSEIF ゾーン == "마함"
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3
		RETURN 0
	ELSE
		RETURN 0
	ENDIF

	SIF 발동済_1(듀얼리스트,72885)
		효과使用불가:0 = 1
	SIF 발동済_2(듀얼리스트,72885)
		효과使用불가:1 = 1

	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 카게로우
	효과条件종류 = モン全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		효과使用불가:0 = 1
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件カテゴリ = 오버로드
	효과条件종류 = モン全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		효과使用불가:1 = 1
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과範囲상대마함 = 1
	효과条件除去種 = 묘지
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		효과使用불가:1 = 1
	SIF 효과使用불가:0 == 1 && 효과使用불가:1 == 1
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_72885(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID
#DIM DYNAMIC 소환カード
#DIM DYNAMIC モンスター数,5
#DIM DYNAMIC SS可能数
#DIM DYNAMIC 소환カードID
#DIM DYNAMIC ダメージ量
#DIM DYNAMIC 条件달성
#DIM DYNAMIC 효과使用불가,2


IF 종류 == 마함起動 || 종류 == 손패起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,72885,1)
	IF RESULT == 0
		SIF 발동済_1(듀얼리스트,72885)
			효과使用불가:0 = 1
		SIF 발동済_2(듀얼리스트,72885)
			효과使用불가:1 = 1
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件カテゴリ = 카게로우
		효과条件종류 = モン全般
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			효과使用불가:0 = 1
		CALL FULLRESET
		효과範囲필드 = 1
		효과条件カテゴリ = 오버로드
		효과条件종류 = モン全般
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			효과使用불가:1 = 1
		CALL FULLRESET
		효과範囲상대필드 = 1
		효과範囲상대마함 = 1
		효과条件除去種 = 묘지
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			효과使用불가:1 = 1
	
		IF 듀얼리스트 == "자신"
			IF 효과使用불가:0 != 1 && 효과使用불가:1 != 1
				CALL YN_CHOICE(듀얼리스트,"●덱에서「카게로우」몬스터 １장을 패에 넣는다。","●상대 필드의 몬스터 １장을 파괴한다。")
			ELSEIF 효과使用불가:0 != 1
				RESULT = 0
			ELSEIF 효과使用불가:1 != 1
				RESULT = 1
			ELSE
				PRINTW 발동할 수 있는 효과가 없습니다
				RETURN 0
			ENDIF
		ELSE
			IF 효과使用불가:0 != 1
				RESULT = 0
			ELSEIF 효과使用불가:1 != 1
				RESULT = 1
			ELSE
				RETURN 0
			ENDIF
		ENDIF

		IF RESULT == 0
			CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,72885,1)
			IF RESULT == 0
				CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)

				CALL FULLRESET
				효과範囲상대필드 = 1
				CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
				SIF RESULT == 1
					条件달성 = 1

				CALL FULLRESET
				효과範囲덱 = 1
				효과条件カテゴリ = 카게로우
				효과条件종류 = モン全般
				CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
				選択カード_ID = RESULT:1
				IF 条件달성 == 1 && 選択カード_ID >= 1 && モンスター数(듀얼리스트) != 5
					PRINTL 특수 소환하시겠습니까？
					CALL YN_CHOICE(듀얼리스트)
				ELSE
					RESULT = いいえ
				ENDIF
				IF RESULT == はい
					CALL FULLRESET
					효과範囲손패 = 1
					효과条件ID = 選択カード_ID
					CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
				ENDIF
			ENDIF
		ELSEIF RESULT == 1
			CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,72885,2)
			IF RESULT == 0
				CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
				CALL FULLRESET
				효과範囲상대필드 = 1
				효과範囲상대마함 = 1
				CALL CARD_REMOVAL_ADV(듀얼리스트,"単体除去",場所,"묘지")
			ENDIF
		ENDIF
	ENDIF
ENDIF