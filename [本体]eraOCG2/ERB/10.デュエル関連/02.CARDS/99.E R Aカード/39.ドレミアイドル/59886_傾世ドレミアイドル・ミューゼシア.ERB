@CARDSUMMON_59886(듀얼리스트,소환カード,EX参照)
#DIMS DYNAMIC 듀얼리스트
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 소환カード
#DIM DYNAMIC EX参照
#DIM DYNAMIC 条件达成
;素材条件

CALL RESETCONDITION_MAT
必要レベル数 = 9
IF EX参照 == 0 || EX参照 == 1
	素材条件튜너 = 1
	素材条件종족 = 천사족
ELSEIF EX参照 >= 10
	素材条件튜너 = -1
ENDIF

IF EX参照 == 1
	CALL SYNCAN(듀얼리스트,소환カード,59886) 
	RETURN RESULT
ENDIF


@CARDCAN_59886(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,59886)
SIF RESULT == 1
	RETURN 0

IF 종류 == 특수소환時 || 종류 == EX소환時
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과条件표시 = 表側표시
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1

ELSEIF 종류 == 身代효과
	SIF ゾーン != "필드"
		RETURN 0
	SIF !GROUPMATCH(破壊종류,"효과","戦闘")
		RETURN 0
	RETURN 1

ELSEIF 종류 == ターン終了時強制
	SIF ゾーン != "필드"
		RETURN 0
	SIF モンスター数(듀얼리스트) != 1
		RETURN 0
	SIF モンスター数(対面者) != 1
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과条件カテゴリ:0 = 뮤제시아최애
	효과条件カテゴリ:1 = 도레미 하코오시
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_59886(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択場所
#DIM DYNAMIC レベル
#DIM DYNAMIC 조교대상
#DIM DYNAMIC 実行役대상

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 특수소환時 || 종류 == EX소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,59886,1)
	IF RESULT == 0
		CALL FULLRESET
		효과条件표시 = 表側표시
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"상대필드",ゾーン,場所)
		選択場所 = RESULT
		조교대상 = NO_TO_CHARANUM(2093)
		CALL Doremi_fans(듀얼리스트,選択場所,조교대상,"登場")
	ENDIF
ELSEIF 종류 == 지속효과
		CALL FULLRESET
		효과条件カテゴリ = 도레미아이돌
		효과条件표시 = 表側표시
		CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"対耐")
		CALL STATCHANGE_EFFECT(듀얼리스트,"마함",場所,"対耐")

		CALL FULLRESET
		CALL FULLRESET
		효과範囲상대필드 = 1
		효과条件カテゴリ:0 = 큐티아최애
		효과条件カテゴリ:1 = 드리미아최애
		효과条件カテゴリ:2 = 엘리티아최애
		효과条件カテゴリ:3 = 팬시아최애
		효과条件カテゴリ:4 = 그레이시아최애
		효과条件カテゴリ:5 = 엔제리아최애
		효과条件カテゴリ:6 = 뷰티아최애
		효과条件カテゴリ:7 = 쿨리아최애
		효과条件カテゴリ:8 = 뮤제시아최애
		효과条件カテゴリ:9 = 도레미 하코오시
		효과条件표시 = 表側표시
		CALL STATCHANGE_EFFECT(듀얼리스트,"상대필드",場所,"戦狂")

ELSEIF 종류 == 身代효과
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,59886,3)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,EX덱行き)
		
		CALL Doremi_business(対面者,2093)
		CALL FULLRESET
		효과条件표시 = 0
		CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"破耐",6)
		CALL STATCHANGE_EFFECT(듀얼리스트,"마함",場所,"破耐",6)
		RETURN 1
	ENDIF

ELSEIF 종류 == ターン終了時強制
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,59886)
	IF RESULT == 0
		조교대상 = NO_TO_CHARANUM(2093)
		CALL Doremi_FansAttack(듀얼리스트,조교대상,場所)
	ENDIF
ENDIF
