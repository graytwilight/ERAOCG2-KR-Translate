#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 기적의 천공
	CASE "略称"
		RESULTS = 기적의 천공
	CASE "カテゴリ"
		RESULTS:0 = 화석 융합
ENDSELECT


@CARD_70463(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 通常마법
	CASE "추가日"
		RETURN 250919
ENDSELECT

RETURN 0

@CARD_EXPLANATION_70463(종류)
#DIM DYNAMIC 종류

PRINTL このカード名のカードは１ターンに１枚しか발동できない。
CALLFORM CARD_ABLE(1,마함起動,손패起動)
PRINTL ①：덱からレベル４以下の땅속성・원소정령족モンスター１体を묘지へ送る。
PRINTL 자신の묘지に「화석 융합－파슬 퓨전」が存在する場合、
PRINTL さらに자신は덱から１枚ドローする。

@CARDCAN_70463(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,70463)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,70463)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	効果範囲덱 = 1
	効果条件종족 = 땅속성
	効果条件종족 = 원소정령족
	効果条件レベル:0 = 1
	効果条件レベル:1 = 2
	効果条件レベル:2 = 3
	効果条件レベル:3 = 4
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_70463(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

IF 종류 == 마함起動 || 종류 == 손패起動
	;カード발동確認
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,70463,1)
	IF RESULT == 0
		;通常마법汎用処理
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		効果条件종족 = 땅속성
		効果条件종족 = 원소정령족
		効果条件レベル:0 = 1
		効果条件レベル:1 = 2
		効果条件レベル:2 = 3
		効果条件レベル:3 = 4
		CALL CARD_ADD_GY_BASIC(듀얼리스트,"덱",ゾーン,場所)

		CALL FULLRESET
		効果範囲묘지 = 1
		効果条件名前 = 화석 융합－파슬 퓨전
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT == 1
			CALL CARDDRAW_BASIC(듀얼리스트,1)
	ENDIF
ENDIF
