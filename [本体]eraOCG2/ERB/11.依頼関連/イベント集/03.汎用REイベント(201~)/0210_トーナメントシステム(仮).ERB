			ENDIF
			SUBSTRING 설정표시, 0, 20
		ELSE
			TRYCALLFORM DUELDECK_{連戦덱}("存在確認")
			SUBSTRING RESULTS, 0, 20
		ENDIF
		설정표시 = 【%RESULTS%】
