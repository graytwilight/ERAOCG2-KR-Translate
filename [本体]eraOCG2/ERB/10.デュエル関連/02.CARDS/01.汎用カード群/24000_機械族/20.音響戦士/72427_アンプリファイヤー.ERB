	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 사운드 워리어
	효과条件종류 = モン全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		발동불가:0 = 1
	SIF カウンタ < 3
		발동불가:0 = 1
	
	SIF 발동済_2(듀얼리스트,72427)
		발동불가:1 = 1
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲마함 = 1
	효과範囲상대필드 = 1
	효과範囲상대마함 = 1
	효과条件カテゴリ = 사운드 워리어
	효과条件표시 = 表側표시
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		발동불가:1 = 1
	SIF カウンタ < 5
		발동불가:1 = 1

	SIF 발동済_3(듀얼리스트,72427)
		발동불가:2 = 1
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲마함 = 1
	효과範囲상대필드 = 1
	효과範囲상대마함 = 1
	효과条件カテゴリ = 사운드 워리어
	효과条件표시 = 表側표시
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		발동불가:2 = 1
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과範囲상대마함 = 1
	효과範囲상대묘지 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		발동불가:2 = 1
	SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		발동불가:2 = 1
	SIF カウンタ < 7
		발동불가:2 = 1

	IF 듀얼리스트 == "자신"
		PRINTL 【효과를 선택해주세요】
		PRINTL
		SIF 발동불가:0 != 1
			PRINTL [3] - 덱에서 "사운드 워리어" 몬스터 １장을 손패에 넣는다.
		SIF 발동불가:1 != 1
			PRINTL [5] - 필드의 "사운드 워리어" 카드의 수×３００ 데미지를 상대에게 준다.
		SIF 발동불가:2 != 1
			PRINTL [7] - 필드의 "사운드 워리어" 카드의 수까지 상대의 필드 / 묘지의 카드를 선택하고 제외한다.
		BINPUT

	ELSE
		RESULT = 9999
		IF 발동불가:0 != 1
			RESULT = 3
		ELSEIF 발동불가:2 != 1
			RESULT = 7
		ELSEIF 발동불가:1 != 1
			RESULT = 5
		ENDIF
	ENDIF

	IF RESULT == 3
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,72427,1)
		IF RESULT == 0
			REPEAT 3
				CALL FULLRESET
				효과範囲마함 = 1
				효과条件カテゴリ = 사운드 카운터
				효과条件個Ｃ所持 = 999
				CALL CARD_GRANT_ADV(듀얼리스트,ゾーン,場所,"個Ｃ",-1)
				SIF RESULT == 1
					条件달성++
			REND
			SIF 条件달성 != 3
				RETURN 0
			CALL FULLRESET
			효과範囲덱 = 1
			효과条件カテゴリ = 사운드 워리어
			효과条件종류 = モン全般
			CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
		ENDIF

