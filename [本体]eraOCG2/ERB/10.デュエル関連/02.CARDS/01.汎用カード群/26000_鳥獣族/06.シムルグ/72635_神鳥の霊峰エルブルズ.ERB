#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN フィールド
	CASE "추가日"
		RETURN 250917
ENDSELECT

RETURN 0

@CARD_EXPLANATION_72635(종류)
#DIM DYNAMIC 종류

PRINTL 자신 필드는 "엘부르즈"가 된다。
PRINTL 이 카드명의 ③의 효과는 １턴에 １번밖에 사용할 수 없다。
CALLFORM CARD_ABLE(0,攻守変動)
PRINTL ①：필드의 비행야수족 / 바람속성 몬스터의 공격력 / 수비력을 ３００올린다。
CALLFORM CARD_ABLE(0,攻守変動)
PRINTL ②：패의 레벨５ 이상의 비행야수족 / 바람속성 몬스터를 소환할 때의 레벨은 ２개 내려간다。
CALLFORM CARD_ABLE(3,마함起動)
PRINTL ③：자신 필드에 비행야수족 / 바람속성 몬스터가 존재하는 경우에 발동할 수 있다。
PRINTL 비행야수족 몬스터１장을 소환한다。


@CARDCAN_72635(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,72635)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	SIF 발동済_3(듀얼리스트,72635)
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件종족 = 비행야수족
	효과条件속성 = 바람속성
	효과条件표시 = 表側표시
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲손패 = 1
	효과条件종족 = 비행야수족
	SIF モンスター数(듀얼리스트) >= 5
		CALLFORM 효과条件レベル_ADV(5,"以上")
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 마함起動 || 종류 == 손패起動
	IF ゾーン == "마함"
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3
			RETURN 0
	ENDIF
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	RETURN 1

ELSEIF 종류 == 지속효과 || 종류 == 攻守変動
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") >= 2
		RETURN 0
	RETURN 1
ENDIF



@CARDEFFECT_72635(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 설정レベル
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カードB
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,72635,3)
	IF RESULT == 0
		CALL FULLRESET
		효과条件종족 = 비행야수족
		IF モンスター数(듀얼리스트) >= 5
			CALLFORM 효과条件レベル_ADV(5,"以上")
		ELSEIF モンスター数(듀얼리스트) < 1
			CALLFORM 효과条件レベル_ADV(4,"以下")
		ENDIF
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"손패",ゾーン,場所)
		IF RESULT != 9999
			追소환権 ++
			CALL CARD_SUMMON_SHORI(듀얼리스트,RESULT,"攻撃표시",3)
		ENDIF
	ENDIF

ELSEIF 종류 == 마함起動 || 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,72635)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,마함行き)
	ENDIF

ELSEIF 종류 == 攻守変動
	CALL FULLRESET
	효과条件종족 = 비행야수족
	효과条件속성 = 바람속성
	CALL STATCHANGE_BASIC(듀얼리스트,"필드",場所,300,300)

ELSEIF 종류 == 지속효과
	CALL SET_FIELD_MAGIC_INFO(듀얼리스트,"엘부르즈")
ENDIF
