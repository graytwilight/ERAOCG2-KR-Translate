@CARDNAME_51611,参照先
;ココで지정카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 해방자 모나크생츄어리 알프레드
	CASE "略称"
		RESULTS = 모나왕
	CASE "カテゴリ"
		RESULTS:0 = 골드 팔라딘
		RESULTS:1 = 해방자
		RESULTS:2 = 알프레드
		RESULTS:4 = 뱅가드
ENDSELECT

@CARD_51611(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "외부자"
		RETURN 1
	CASE "종류"
		RETURN 엑시즈
	CASE "속성"
		RETURN 빛속성
	CASE "종족"
		RETURN 전사족
	CASE "レベル"
		RETURN 7
	CASE "攻撃力"
		RETURN 3000
	CASE "守備力"
		RETURN 3000
	CASE "성별"
		RETURN 雄性
	CASE "レア度"
		RETURN ULR
ENDSELECT
