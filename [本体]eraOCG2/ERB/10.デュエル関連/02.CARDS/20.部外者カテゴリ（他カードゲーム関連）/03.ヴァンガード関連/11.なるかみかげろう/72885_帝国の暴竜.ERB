@CARDNAME_72885,参照先
;ココで지정카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 제국의 폭룡
	CASE "略称"
		RESULTS = 제국의 폭룡
	CASE "カテゴリ"
		RESULTS:0 = 카게로우
		RESULTS:1 = 오버로드
		RESULTS:4 = 뱅가드
ENDSELECT


@CARD_72885(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "외부자"
		RETURN 1
	CASE "종류"

		RETURN 速攻마법
ENDSELECT

RETURN 0

@CARD_EXPLANATION_72885(종류)
#DIM DYNAMIC 종류
