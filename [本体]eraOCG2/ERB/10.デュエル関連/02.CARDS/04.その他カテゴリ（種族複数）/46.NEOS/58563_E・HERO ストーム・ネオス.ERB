@CARDSUMMON_58563(듀얼리스트,소환カード,EX参照)
#DIMS DYNAMIC 듀얼리스트
#DIM DYNAMIC 소환カード
#DIM DYNAMIC EX参照

CALL RESETCONDITION_MAT
必要素材数 = 3

IF EX参照 == 0 || EX参照 == 1
	素材条件名前 = 엘리멘틀 히어로 네오스
ELSEIF EX参照 == 10
	素材条件名前 = N 에어 허밍버드
ELSEIF EX参照 >= 11
	素材条件名前 = N 아쿠아 돌핀
ENDIF

IF EX参照 == 1
	CALL FUSCAN(듀얼리스트,소환カード,58563) 
	RETURN RESULT
ENDIF



@CARDCAN_58563(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,58563)
SIF RESULT == 1
	RETURN 0


IF 종류 == EX덱起動
	CALL CARD_EX_CHECK(듀얼리스트,58563)
	SIF RESULT == 1
		RETURN 0
	CALL RESETAREA_MAT
	素材範囲필드 = 1
	CALL FULLRESET
	효과範囲EX덱 = 1
	효과条件固定 = 場所
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	SIF 발동済_1(듀얼리스트,58563)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	RETURN 0
ELSEIF 종류 == 戦破壊→묘지
	SIF 발동済_2(듀얼리스트,58563)
		RETURN 0
	RETURN 1
ELSEIF 종류 == ターン終了時強制
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ENDIF




@CARDEFFECT_58563(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == EX덱起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,58563)
	IF RESULT == 0
		CALL RESETAREA_MAT
		素材範囲필드 = 1
		CALL FULLRESET
		TRYCALLFORM CARDSUMMON_58563(듀얼리스트,場所)
		CALL FUSSUMMON(듀얼리스트,場所,덱行き)
	ENDIF
ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,58563,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲필드 = 1
		효과範囲마함 = 1
		효과範囲상대필드 = 1
		효과範囲상대마함 = 1
		효과条件종류 = 마함全般
		CALL CARD_REMOVAL_ADV(듀얼리스트,"全体除去",場所,"묘지")
		CALL FULLRESET
		효과範囲마함 = 1
		효과範囲상대마함 = 1
		CALL CARD_REMOVAL_ADV(듀얼리스트,"全体除去",場所,"묘지")

		CALL FULLRESET
		효과条件표시 = 0
		CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"魔耐",1)
		CALL FULLRESET
		효과条件표시 = 0
		CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"함정耐",1)

	ENDIF
	
ELSEIF 종류 == 戦破壊→묘지
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,58563,2)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲필드 = 1
		효과範囲마함 = 1
		효과範囲상대필드 = 1
		효과範囲상대마함 = 1
		CALL CARD_REMOVAL_ADV(듀얼리스트,"全体除去",場所,"덱")
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件レベル = 7
		효과条件カテゴリ = 네오스
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
	ENDIF
ELSEIF 종류 == ターン終了時強制
	CALL FULLRESET
	효과条件名前:0 = N 에어 허밍버드
	효과条件名前:1 = N 아쿠아 돌핀
	효과条件固名前選択 = 1
	효과条件任意 = 1
	효과条件複数 = 2

	CALL CARD_ADD_GY_BASIC(듀얼리스트,"덱",ゾーン,場所)
	IF RESULT != 1
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,덱行き)
	ENDIF
ENDIF
