@CARDCAN_70463(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,70463)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,70463)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件종족 = 땅속성
	효과条件종족 = 원소정령족
	효과条件レベル:0 = 1
	효과条件レベル:1 = 2
	효과条件レベル:2 = 3
	효과条件レベル:3 = 4
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_70463(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

IF 종류 == 마함起動 || 종류 == 손패起動
	;カード발동確認
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,70463,1)
	IF RESULT == 0
		;通常마법汎用処理
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과条件종족 = 땅속성
		효과条件종족 = 원소정령족
		효과条件レベル:0 = 1
		효과条件レベル:1 = 2
		효과条件レベル:2 = 3
		효과条件レベル:3 = 4
		CALL CARD_ADD_GY_BASIC(듀얼리스트,"덱",ゾーン,場所)

		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件名前 = 화석 융합－파슬 퓨전
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT == 1
			CALL CARDDRAW_BASIC(듀얼리스트,1)
	ENDIF
ENDIF
