	CASE "마함"
		SIF 효과範囲마함 == 1
			条件달성 = 1
	CASE "손패"
		SIF 효과範囲손패 == 1
			条件달성 = 1
	CASE "묘지"
		SIF 효과範囲묘지 == 1
			条件달성 = 1
	CASE "제외"
		SIF 효과範囲제외 == 1
			条件달성 = 1
	ENDSELECT
	IF 条件달성 != 1
		RETURN 0
	ENDIF
ENDIF
IF GROUPMATCH(대상효과種,필드→묘지,손패→묘지,덱→묘지,破壊→묘지,戦闘→묘지,필드→戦離,제외時,戦破壊→묘지,R素材時효과,F素材時효과,S素材時효과,X素材時효과,L素材時효과)
VARSET 条件달성
CALL CARD_S_FILTER_SET(대상듀얼리스트,대상ゾーン,대상場所,듀얼리스트,6,대상효과ID)
SIF RESULT == 1
	条件달성 = 1
CALL CARD_FILTER_SET(대상듀얼리스트,대상ゾーン,대상場所,듀얼리스트,6,대상효과ID)
SIF RESULT == 1
	条件달성 = 1
ELSE
	VARSET 条件달성
	CALL CARD_S_FILTER_SET(대상듀얼리스트,대상ゾーン,대상場所,듀얼리스트)
	SIF RESULT == 1
