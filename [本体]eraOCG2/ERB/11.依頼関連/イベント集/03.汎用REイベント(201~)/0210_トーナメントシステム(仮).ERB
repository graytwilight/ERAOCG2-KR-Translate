	ELSE
		IF 승리数 >= 1
			SIF 大会対戦結果:カウンタ != 승리数
				SETCOLOR C_GRAY
		ENDIF
		IF 対戦枠:カウンタ == -1
			PRINTFORM %"「이름없음」",26,LEFT%
		ELSE
			설정名前 = -「%CALLNAME:(対戦枠:カウンタ)%」-
			SUBSTRING 설정名前, 0, 26
