CALL CARD_ABLE(3,효과後誘発)
PRINTL ③：このカードがフィールドに存在し、자신が「블래스터 블레이드」を특수소환した場合に발동できる。
PRINTL このカードと자신フィールドの「블래스터 블레이드」１体の攻撃力をターン終了時まで１８００アップする。



@CARDCAN_51611(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カードID
#DIM DYNAMIC 存在カードID,20
#DIM DYNAMIC カウンタB
#DIM DYNAMIC 条件달성
#DIM DYNAMIC コスト軽減数

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,51611)
SIF RESULT == 1
	RETURN 0

IF 종류 == EX덱起動
	SIF 발동済_1(듀얼리스트,51611)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL CARD_EX_CHECK(듀얼리스트,51611)
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件カテゴリ = 알프레드
	효과条件종류 = レベル持ち
	효과条件重ねてＸ = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == EX소환時強制
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲상대필드 = 1
	효과条件표시 = 裏側표시
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 필드起動
	SIF 발동済_2(듀얼리스트,51611)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF 손패数(듀얼리스트) < 3 - (GETVAR(@"%듀얼리스트%_MZ_Ｘ:場所") + 1)
		RETURN 0
	RETURN 1
ELSEIF 종류 == 효과後誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 발동済_3(듀얼리스트,51611)
		RETURN 0
	CALL FULLRESET
	효과条件名前 = 블래스터 블레이드
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"특수소환")
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_51611(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 選択カード名前,5

#DIM DYNAMIC 選択カード
#DIMS DYNAMIC 選択カードゾーン
#DIM DYNAMIC 選択カードID
#DIM DYNAMIC 소환先
#DIM DYNAMIC 存在カードID,20
#DIM DYNAMIC カウンタB
#DIM DYNAMIC 条件カード数
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 条件달성
#DIM DYNAMIC 戻し数

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == EX덱起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,51611,1)
	IF RESULT == 0
		CALL RESETCONDITION_MAT
		必要素材数 = 1
		素材条件カテゴリ = 알프레드
		素材条件종류 = レベル持ち
		重ねてＸ = 1
		TRYCALLFORM XYZSUMMON(듀얼리스트,場所)
	ENDIF
ELSEIF 종류 == EX소환時強制
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,51611)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲필드 = 1
		효과範囲상대필드 = 1
		효과条件표시 = 裏側표시
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		효과条件CNT = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"Ｘ",RESULT)
	ENDIF
ELSEIF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,51611,2)
	IF RESULT == 0
		IF (GETVAR(@"%듀얼리스트%_MZ_Ｘ:場所") + 1) < 3
			CALL FULLRESET
			효과範囲손패 = 1
			효과条件複数 = 3 - (GETVAR(@"%듀얼리스트%_MZ_Ｘ:場所") + 1)
			CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
			IF RESULT == 1
				CALL FULLRESET
				효과範囲필드 = 1
				효과条件他所 = 1
				효과条件CNT = 1
				CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
				戻し数 = RESULT
				
				REPEAT 戻し数
					CALL FULLRESET
					효과範囲필드 = 1
					효과条件他所 = 1
					CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
					IF RESULT != 9999
						CALL CARD_SELECT(듀얼리스트,RESULT)
						選択カード = RESULT
						CALL CARD_ADD_DECK_SPC(대상者（CS）,参照先（CS）,選択カード)
					ENDIF
				REND

				CALL FULLRESET
				효과範囲덱 = 1
				효과条件カテゴリ:0 = 로열 팔라딘
				효과条件カテゴリ:1 = 골드 팔라딘
				효과条件複数 = 96
				CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所,,5)
			ENDIF
		ELSEIF (GETVAR(@"%듀얼리스트%_MZ_Ｘ:場所") + 1) >= 3
			CALL FULLRESET
			효과範囲필드 = 1
			효과条件他所 = 1
			효과条件CNT = 1
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			戻し数 = RESULT
			
			REPEAT 戻し数
				CALL FULLRESET
				효과範囲필드 = 1
				효과条件他所 = 1
				CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
				IF RESULT != 9999
					CALL CARD_SELECT(듀얼리스트,RESULT)
					選択カード = RESULT
					CALL CARD_ADD_DECK_SPC(대상者（CS）,参照先（CS）,選択カード)
				ENDIF
			REND

			CALL FULLRESET
			효과範囲덱 = 1
			효과条件カテゴリ:0 = 로열 팔라딘
			효과条件カテゴリ:1 = 골드 팔라딘
			효과条件複数 = 96
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所,,5)
		ENDIF
	ENDIF
ELSEIF 종류 == 효과後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,51611,3)
	IF RESULT == 0
		CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"一攻",1800)
		CALL FULLRESET
		효과範囲필드 = 1
		효과条件名前 = 블래스터 블레이드
		CALL CARD_GRANT_ADV(듀얼리스트,ゾーン,場所,"一攻",1800)
	ENDIF
ENDIF
