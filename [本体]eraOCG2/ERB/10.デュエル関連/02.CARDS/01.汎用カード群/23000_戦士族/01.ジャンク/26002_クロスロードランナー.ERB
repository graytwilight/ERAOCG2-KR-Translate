@CARDCAN_26002(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,26002)
SIF RESULT == 1
	RETURN 0

IF 종류 == 효과後誘発
	SIF GROUPMATCH(ゾーン,"묘지","손패")
		RETURN 0
	SIF 발동済_1(듀얼리스트,26002)
		RETURN 0
	CALL FULLRESET
	CALL CARD_SS_CHECK(듀얼리스트,26002,ゾーン)
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	효과条件튜너 = 1
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"묘지送り全般+H")
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_26002(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択レベル
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 효과後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,26002,1)
	IF RESULT == 0
		CALL FULLRESET
		효과추가종류 = 2
		CALL CARD_SP_SUMMON(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			효과範囲필드 = 1
			효과条件スーパー名前 = 정크 워리어
			효과条件カテゴリ = 파워 오브 펠로우즈
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			IF RESULT == 1
				CALL FULLRESET
				효과条件以攻撃力 = 1900
				효과추가종류 = 2
				CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드全体",場所,"표시변경")
			ENDIF
		ENDIF
		EX소환可能종류 = 싱크로
		CALL CARD_EX_RESTRICTION(듀얼리스트)
	ENDIF
ENDIF


