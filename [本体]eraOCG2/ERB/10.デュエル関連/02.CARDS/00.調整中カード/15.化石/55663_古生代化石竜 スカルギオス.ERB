@CARDSUMMON_55663(듀얼리스트,소환カード,EX参照)
#DIMS DYNAMIC 듀얼리스트
#DIM DYNAMIC 소환カード
#DIM DYNAMIC EX参照

CALL RESETCONDITION_MAT
必要素材数 = 2

IF EX参照 == 0 || EX参照 == 1
	素材条件종족 = 원소정령족
ELSEIF EX参照 >= 10
	素材範囲상대묘지 = 1
	素材条件レベル:0 = 7
	素材条件レベル:1 = 8
	素材条件レベル:2 = 9
	素材条件レベル:3 = 10
	素材条件レベル:4 = 11
	素材条件レベル:5 = 12
ENDIF

IF EX参照 == 1
	CALL FUSCAN(듀얼리스트,소환カード,55663) 
	RETURN RESULT
ENDIF

@CARDCAN_55663(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,55663)
SIF RESULT == 1
	RETURN 0

IF 종류 == 攻撃時誘発

ELSEIF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_55663(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 対戦カード
#DIM DYNAMIC 상대モンスター攻撃力_55663
#DIM DYNAMIC 상대モンスター守備力_55663
#DIMS DYNAMIC 対面者
#DIM DYNAMIC ③使用플래그

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 지속효과
	CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"貫通")
ELSEIF 종류 == 攻撃時強制誘発
	CALL SET_PLAYER_INFO(듀얼리스트,"ダメージ倍化",3,1)
ELSEIF 종류 == 攻撃時誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,55663,1)
	IF RESULT == 0
		CALL FULLRESET
		対戦カード = 戦闘場所(듀얼리스트,1)
		상대モンスター攻撃力_55663 = GETVAR(@"%対面者%_MZ_攻:対戦カード")
		상대モンスター守備力_55663 = GETVAR(@"%対面者%_MZ_守:対戦カード")
		CALL SET_FIELD_INFO(듀얼리스트,"필드",対戦カード,"永攻",상대モンスター守備力_55663,上書きモード)
		CALL SET_FIELD_INFO(듀얼리스트,"필드",対戦カード,"永守",상대モンスター攻撃力_55663,上書きモード)
		③使用플래그 = 1
	ENDIF
ELSEIF 종류 == 攻撃後強制誘発
	IF ③使用플래그 == 1
		CALL SET_FIELD_INFO(듀얼리스트,"필드",対戦カード,"永攻",상대モンスター攻撃力_55663,上書きモード)
		CALL SET_FIELD_INFO(듀얼리스트,"필드",対戦カード,"永守",상대モンスター守備力_55663,上書きモード)
	ENDIF
	CALL FULLRESET
ENDIF
