対面者 = %RESULTS%

IF 종류 == 마함起動 || 종류 == 손패起動
	;カード발동確認
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,70462,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과条件종류 = モン全般
		CALL CARD_ADD_GY_BASIC(듀얼리스트,"손패",ゾーン,場所)
		IF RESULT == 1
			PRINTL 종족を選んでください。
			PRINT [0]  마법사족　 
			PRINT [1]  드래곤족　 
			PRINT [2]  언데드족 
			PRINTL [3]  전사족　　　 
			PRINT [4]  기계족　　　 
			PRINT [5]  야수족　　　　 
			PRINT [6]  비행야수족　　　 
			PRINTL [7]  비늘야수족　　　 
			PRINT [8]  악마족　　　 
			PRINT [9]  천사족　　　 
			PRINT [10] 곤충족　　　 
			PRINTL [11] 원소정령족　　 
			PRINT [12] 식물족　　　 
			PRINT [13] 사이킥족 
			PRINT [14] 사이버스족 
			PRINTL [15] 바다생물족　　　 
			PRINT [16] 미확인족　　 
			BINPUT

			IF RESULT == 0
				효과条件종족 = 마법사족
			ELSEIF RESULT == 1
				효과条件종족 = 드래곤족
			ELSEIF RESULT == 2
				효과条件종족 = 언데드족
			ELSEIF RESULT == 3
				효과条件종족 = 전사족
			ELSEIF RESULT == 4
				효과条件종족 = 기계족
			ELSEIF RESULT == 5
				효과条件종족 = 야수족
			ELSEIF RESULT == 6
				효과条件종족 = 비행야수족
			ELSEIF RESULT == 7
				효과条件종족 = 비늘야수족
			ELSEIF RESULT == 8
				효과条件종족 = 악마족
			ELSEIF RESULT == 9
				효과条件종족 = 천사족
			ELSEIF RESULT == 10
				효과条件종족 = 곤충족
			ELSEIF RESULT == 11
				효과条件종족 = 원소정령족
			ELSEIF RESULT == 12
				효과条件종족 = 식물족
			ELSEIF RESULT == 13
				효과条件종족 = 사이킥족
			ELSEIF RESULT == 14
				효과条件종족 = 사이버스족
			ELSEIF RESULT == 15
				효과条件종족 = 바다생물족
			ELSEIF RESULT == 16
				효과条件종족 = 미확인족
			ENDIF

			PRINTL レベルを選んでください。
			PRINT [1]
			PRINT [2]
			PRINT [3]
			PRINT [4]
			PRINT [5]
			PRINTL [6]
			PRINT [7]
			PRINT [8]
			PRINT [9]
			PRINT [10]
			PRINT [11]
			PRINTL [12]
			BINPUT

			효과条件レベル = RESULT

			효과範囲손패 = 1
			효과範囲덱 = 1
			CALL CARD_ADD_GY_ADV(対面者,ゾーン,場所)
		ENDIF
	ENDIF
ENDIF
