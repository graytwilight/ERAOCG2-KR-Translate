	CASE "名前"
		RESULTS = 대파괴수 연구소
	CASE "略称"
		RESULTS = 연구소
	CASE "カテゴリ"
		RESULTS:0 = 대파괴수
		RESULTS:1 = 게임 오리지널
ENDSELECT


@CARD_72753(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 지속마법
	CASE "レア度"
		RETURN RARE
	CASE "추가日"
		RETURN 250923
ENDSELECT

RETURN 0

@CARD_EXPLANATION_72753(종류)
#DIM DYNAMIC 종류

PRINTL "대파괴수 연구소"는 자신 필드 위에 １장밖에 앞면 표시로 존재할 수 없다。
PRINTL 이 카드명의 ①③의 효과는 각각 １턴에 １번밖에 사용할 수 없다。
CALLFORM CARD_ABLE(1,마함起動 ,손패起動)
PRINTL ①：이 카드의 발동 시의 효과처리로서、덱 / 묘지에서 「KYOUTOU 워터프론트」１장을 패에 넣을 수 있다。
CALLFORM CARD_ABLE(2,효과後強制誘発)
PRINTL ②：패 이외에서 카드가 묘지로 보내졌을 때마다 발동한다。
PRINTL 이 카드에 파괴수 카운터를 １개 놓는다（최대 ３개까지）。
CALLFORM CARD_ABLE(3,마함起動)
PRINTL ③：이 카드의 파괴수 카운터가 ２개 이상인 경우에 발동할 수 있다。
PRINTL 덱에서 "대파괴수" 카드 １장을 패에 넣는다。
CALLFORM CARD_ABLE(4,지속효과)
PRINTL ④：자신의 묘지에 "파괴수" 몬스터가 존재하는 경우、
PRINTL 자신 필드의 "파괴수" 몬스터와 "대파괴수" 몬스터는 일시 파괴 저항을 얻는다。

@CARDCAN_72753(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,72753)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	SIF 발동済_3(듀얼리스트,72753)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_個Ｃ:場所") < 2
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 대파괴수
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 마함起動 || 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,72753)
		RETURN 0
	IF 종류 == 마함起動
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
			RETURN 0
	ELSEIF 종류 == 손패起動
		SIF 마함数(듀얼리스트) >= 5
			RETURN 0
	ENDIF
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲마함 = 1
	효과条件名前 = 대파괴수 연구소
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 효과後強制誘発
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_個Ｃ:場所") >= 3
		RETURN 0
	CALL FULLRESET
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"묘지送り全般",2)
	SIF RESULT != 1
		RETURN 0
	RETURN 1


ELSEIF 종류 == 지속효과
	SIF ゾーン != "마함"
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件カテゴリ = 파괴수
	효과条件종류 = モン全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_72753(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード

IF 종류 == 마함起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,72753,3)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件カテゴリ = 대파괴수
		CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
	ENDIF

ELSEIF 종류 == 마함起動 || 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,72753,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,마함行き)
		CALL FULLRESET
		효과範囲덱 = 1
		효과範囲묘지 = 1
		효과条件名前 = KYOUTOU 워터프론트
		효과条件任意 = 1
		CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
	ENDIF

ELSEIF 종류 == 효과後強制誘発
	CALL FULLRESET
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,72753,2)
	IF RESULT == 0
		PRINTFORML 대파괴수 연구소『{場所}』에 카운터가 놓였습니다。
		CALL SET_FIELD_INFO(듀얼리스트,"마함",場所,"個Ｃ",1)
	ENDIF


ELSEIF 종류 == 지속효과
	CALL FULLRESET
	효과条件カテゴリ = 파괴수
	효과条件カテゴリ = 대파괴수
	CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"一破")
ENDIF

