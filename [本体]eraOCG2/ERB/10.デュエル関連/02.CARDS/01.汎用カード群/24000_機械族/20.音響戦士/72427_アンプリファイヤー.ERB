		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,72427,2)
		IF RESULT == 0
			REPEAT 5
				CALL FULLRESET
				효과範囲마함 = 1
				효과条件カテゴリ = 사운드 카운터
				효과条件個Ｃ所持 = 999
				CALL CARD_GRANT_ADV(듀얼리스트,ゾーン,場所,"個Ｃ",-1)
				SIF RESULT == 1
					条件달성++
			REND
			SIF 条件달성 != 5
				RETURN 0
			CALL FULLRESET
			효과範囲필드 = 1
			효과範囲마함 = 1
			효과範囲상대필드 = 1
			효과範囲상대마함 = 1
			효과条件カテゴリ = 사운드 워리어
			효과条件표시 = 表側표시
			효과条件CNT = 1
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			CALL LIFE_CHANGE(듀얼리스트,"減少","효과",RESULT*300,1)
		ENDIF
	
	ELSEIF RESULT == 7
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,72427,3)
		IF RESULT == 0
			REPEAT 7
				CALL FULLRESET
				효과範囲마함 = 1
				효과条件カテゴリ = 사운드 카운터
				효과条件個Ｃ所持 = 999
				CALL CARD_GRANT_ADV(듀얼리스트,ゾーン,場所,"個Ｃ",-1)
				SIF RESULT == 1
					条件달성++
			REND
			SIF 条件달성 != 7
				RETURN 0
			CALL FULLRESET
			효과範囲필드 = 1
			효과範囲마함 = 1
			효과範囲상대필드 = 1
			효과範囲상대마함 = 1
			효과条件カテゴリ = 사운드 워리어
			효과条件표시 = 表側표시
			효과条件CNT = 1
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			選択カード数 = RESULT

			CALL FULLRESET
			효과範囲상대필드 = 1
			효과範囲상대마함 = 1
			효과範囲상대묘지 = 1
			효과条件複数 = 100 - 選択カード数
			CALL CARD_REMOVAL_ADV(듀얼리스트,"単体除去",場所,"제외")
		ENDIF
	ENDIF

ELSEIF 종류 == 효과後強制誘発
	CALL SET_FIELD_INFO(듀얼리스트,ゾーン,場所,"個Ｃ",1)

ELSEIF 종류 == 마함起動 || 종류 == 손패起動
	;カード발동＆설치まで
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,72427)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,마함行き)
	ENDIF

ELSEIF 종류 == 攻守変動
	攻撃力修正 = GETVAR(@"%듀얼리스트%_魔_個Ｃ:場所") * 100
	CALL FULLRESET
	효과条件カテゴリ = 사운드 워리어
	CALL STATCHANGE_BASIC(듀얼리스트,"필드",場所,攻撃力修正)
	CALL STATCHANGE_BASIC(対面者,"필드",場所,攻撃力修正)
ENDIF