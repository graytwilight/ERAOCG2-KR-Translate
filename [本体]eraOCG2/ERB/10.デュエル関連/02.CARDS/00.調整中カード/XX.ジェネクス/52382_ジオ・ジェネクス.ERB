#DIMS DYNAMIC 듀얼리스트
#DIM DYNAMIC 소환カード
#DIM DYNAMIC EX参照
#DIM DYNAMIC カウンタ

CALL RESETCONDITION_MAT
必要レベル数 = 6
IF EX参照 == 0 || EX参照 == 1
	素材条件튜너 = 1
	素材条件名前 = 제넥스 컨트롤러
ELSEIF EX参照 >= 10
	素材条件튜너 = -1
	素材条件속성 = 땅속성
ENDIF

IF EX参照 == 1
	CALL SYNCAN(듀얼리스트,소환カード,52382) 
	RETURN RESULT
ENDIF


