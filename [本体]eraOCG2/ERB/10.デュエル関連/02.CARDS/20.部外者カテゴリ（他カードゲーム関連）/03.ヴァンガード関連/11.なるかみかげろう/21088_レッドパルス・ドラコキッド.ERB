PRINTL 손패から「레드펄스 드래고키드」以外の「카게로우」モンスター１体を특수소환する。
PRINTL このカードをリリースして발동した場合、특수소환するモンスターを자신の묘지・제외状態から選ぶ事もできる。

@CARDCAN_21088(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,21088)
SIF RESULT == 1
	RETURN 0

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 소환時 || 종류 == 특수소환時
	SIF 발동済_1(듀얼리스트,21088)
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件속성 = 화염속성
	효과条件レベル = 3
	효과条件튜너 = 1
	효과条件固名前 = 레드펄스 드래고키드
	효과条件スーパーカテゴリ = 오버로드
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 필드起動
	SIF 발동済_2(듀얼리스트,21088)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲손패 = 1
	효과範囲묘지 = 1
	효과範囲제외 = 1
	효과条件カテゴリ = 카게로우
	효과条件固名前 = 레드펄스 드래고키드
	효과条件소환可 = 2
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_21088(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC ダメージ

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 소환時 || 종류 == 특수소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,21088,1)
	IF RESULT == 0
		CALL FULLRESET
		효과条件속성 = 화염속성
		효과条件レベル = 3
		효과条件튜너 = 1
		효과条件固名前 = 레드펄스 드래고키드
		효과条件スーパーカテゴリ = 오버로드
		CALL CARD_ADD_BASIC(듀얼리스트,"덱",ゾーン,場所,5)
	ENDIF
ELSEIF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,21088,2)
	IF RESULT == 0
		IF モンスター数(듀얼리스트) >= 5
			RESULT = はい
		ELSE
			CALL YN_CHOICE(듀얼리스트,"이 카드를 릴리스한다","이 카드를 릴리스하지 않는다")
		ENDIF
		IF RESULT == はい
			CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)

			CALL FULLRESET
			효과範囲손패 = 1
			효과範囲묘지 = 1
			효과範囲제외 = 1
			효과条件カテゴリ = 카게로우
			효과条件固名前 = 레드펄스 드래고키드
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		ELSE
			CALL FULLRESET
			효과範囲손패 = 1
			효과条件カテゴリ = 카게로우
			효과条件固名前 = 레드펄스 드래고키드
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		ENDIF
	ENDIF
ENDIF


