@CARD_EXPLANATION_20412(종류)
#DIM DYNAMIC 종류

PRINTL 이 카드명의 ①②의 효과는 각각 1턴에 1번만 사용할 수 있다.
CALLFORM CARD_ABLE(1,손패起動)
PRINTL ①: 자신 필드에 마법사족 몬스터가 존재할 경우 발동할 수 있다.
PRINTL 이 카드를 패에서 특수 소환한다.
CALLFORM CARD_ABLE(2,破壊→묘지,戦闘→묘지)
PRINTL ②: 필드의 앞면 표시의 이 카드가 파괴되어 묘지로 보내졌을 경우 발동할 수 있다.
PRINTL 엔드 페이즈에 이 카드를 묘지에서 특수 소환한다.
CALLFORM CARD_ABLE(3,필드起動)
PRINTL ③：자신필드에서 、이 카드와 마법사족 몬스터 １장을 묘지로 보내고 발동할 수 있다。
PRINTL 자신 필드에 "빙의각성－대이나리불"을 특수 소환한다。
PRINTL 그 후、상대 필드의 원래 공격력이 가장 높은 몬스터 １장의、그 수치만큼의 데미지를 상대에게 줄 수 있다。


@CARDCAN_20412(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,20412)
SIF RESULT == 1
	RETURN 0

IF 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,20412)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,20412,"손패")
	SIF RESULT == 1
		RETURN 0

	CALL FULLRESET
	효과範囲필드 = 1
	효과条件종족 = 마법사족
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 破壊→묘지 || 종류 == 戦闘→묘지
	SIF 발동済_2(듀얼리스트,20412)
		RETURN 0
	RETURN 1
ELSEIF 종류 == ターン終了時予約
	CALL CARD_SS_CHECK(듀얼리스트,20412,"묘지")
	SIF RESULT == 1
		RETURN 0

	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件名前 = 이나리불
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0	
RETURN 1
ELSEIF 종류 == 필드起動
	SIF 발동済_3(듀얼리스트,20412)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,120412,"",1)
	SIF RESULT == 1
		RETURN 0

	CALL FULLRESET
	효과範囲필드 = 1
	효과条件他所 = 1
	효과条件종족 = 마법사족
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_20412(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC ダメージ量

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == 손패起動 
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,20412,1)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_SP_SUMMON(듀얼리스트, "손패", 場所)
	ENDIF
ELSEIF 종류 == 破壊→묘지 || 종류 == 戦闘→묘지
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,20412,2)
	IF RESULT == 0
		CALL CARD_RESERV(듀얼리스트,20412)
	ENDIF
ELSEIF 종류 == ターン終了時予約
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件名前 = 이나리불
	CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
ELSEIF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,20412,3)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과範囲필드 = 1
		효과条件종족 = 마법사족
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			CALL CARD_GENERATE(듀얼리스트,120412)

			FOR カウンタ, 0, 5
				SIF GETVAR(@"%対面者%_필드:カウンタ") <= -1
					CONTINUE
				CALLFORM CARD_{GETVAR(@"%対面者%_필드:カウンタ")}, "攻撃力"
				ダメージ量 = MAX(ダメージ量, RESULT)
			NEXT
			IF ダメージ量 > 0
				PRINTL 상대 필드의 원래 공격력이 가장 높은 몬스터 １장의、그 수치만큼의 데미지를 상대에게 주시겠습니까？
				CALL YN_CHOICE(듀얼리스트)
				IF RESULT == はい
					CALL LIFE_CHANGE(듀얼리스트,"減少","효과",ダメージ量,1)
				ENDIF
			ENDIF
		ENDIF
	ENDIF
ENDIF


