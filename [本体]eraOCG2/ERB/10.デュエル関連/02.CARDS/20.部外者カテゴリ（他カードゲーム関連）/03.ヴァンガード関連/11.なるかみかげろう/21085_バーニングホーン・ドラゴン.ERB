@CARDCAN_21085(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,21085)
SIF RESULT == 1
	RETURN 0

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 손패起動 ||  종류 == フリー誘発
	SIF 발동済_1(듀얼리스트,21085)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,21085,"손패")
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	효과範囲EX덱 = 1
	효과条件カテゴリ = 오버로드
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == S素材時효과
	SIF 발동済_2(듀얼리스트,21085)
		RETURN 0
	SIF 紋章済(듀얼리스트,21085)
		RETURN 0
	RETURN 1
ELSEIF 종류 == 永攻紋章起動
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 오버로드
	효과条件종류 = モン全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_21085(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC ダメージ

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 손패起動 ||  종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,21085,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲손패 = 1
		효과条件カテゴリ = 오버로드
		CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT != 9999
			CALL FULLRESET
			CALL CARD_SP_SUMMON(듀얼리스트,"손패",場所)

			IF モンスター数(듀얼리스트) < 5
				CALL FULLRESET
				효과範囲손패 = 1
				효과条件カテゴリ = 카게로우
				효과条件종류 = モン全般
				효과条件固名前 = 버닝혼 드래곤
				CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
				SIF RESULT != 1
					RETURN 0

				CALL FULLRESET
				효과範囲손패 = 1
				효과条件カテゴリ = 카게로우
				효과条件종류 = モン全般
				효과条件固名前 = 버닝혼 드래곤
				효과条件소환可 = 1
				효과条件任意 = 1
				CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
			ENDIF
		ENDIF
	ENDIF
ELSEIF 종류 == S素材時효과
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,21085,2)
	IF RESULT == 0
		CALL CARD_RESERV(듀얼리스트,21085,永攻紋章予約)
	ENDIF
ELSEIF 종류 == 永攻紋章起動
	CALL FULLRESET
	효과条件속성 = 화염속성
	CALL STATCHANGE_BASIC(듀얼리스트,"필드",場所,500)
ENDIF


