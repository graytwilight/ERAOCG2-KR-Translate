;PRINTL EX덱효과確認
VARSET 選択カード, -1
FOR カウンタ,0,紙束最大値
	SIF 상대_EX덱:カウンタ == -1
		CONTINUE
	TRYCALLFORM CARDCAN_{상대_EX덱:カウンタ}("상대",EX덱起動,"EX덱",カウンタ)
