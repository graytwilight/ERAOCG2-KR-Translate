#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 다크 시무르그
	CASE "略称"
		RESULTS = 다무르그
	CASE "カテゴリ"
		RESULTS:0 = 시무르그
ENDSELECT


@CARD_26132(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 효과モン
	CASE "속성"
		RESULT:1 = 바람속성
		RETURN 어둠속성
	CASE "종족"
		RETURN 비행야수족
	CASE "レベル"
		RETURN 7
	CASE "攻撃力"
		RETURN 2700
	CASE "守備力"
		RETURN 1000
	CASE "성별"
		RETURN 牝性
	CASE "추가日"
		RETURN 250917
ENDSELECT

RETURN 0

