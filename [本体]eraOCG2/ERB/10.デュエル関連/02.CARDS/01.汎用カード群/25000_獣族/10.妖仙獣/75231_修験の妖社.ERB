@CARDNAME_75231,参照先
;ココで지정カードの名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 수험의 요사
	CASE "略称"
		RESULTS = 수험의 요사
	CASE "カテゴリ"
		RESULTS:0 = 요선수
ENDSELECT


@CARD_75231(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 지속마법
	CASE "추가日"
		RETURN 250915
ENDSELECT

RETURN 0

@CARD_EXPLANATION_75231(종류)
#DIM DYNAMIC 종류

PRINTL 이 카드명은 룰상 "요선수" 카드로도 취급。
CALLFORM CARD_ABLE(0,지속효과)
PRINTL ①：자신 턴 동안、상대는 자신 필드의 "요선수" 몬스터를 효과의 대상으로 할 수 없다。
CALLFORM CARD_ABLE(0,소환強制誘発)
PRINTL ②：이 카드가 마법＆함정 존에 존재하는 한、
PRINTL "요선수" 몬스터가 소환 / 특수 소환될 때 마다、이 카드에 개별 카운터를 １개 놓는다。
CALLFORM CARD_ABLE(10,마함起動)
PRINTL ③：１턴에 １번、이 카드의 개별 카운터를 임의의 갯수 제거하고 발동할 수 있다。
PRINTL 제거한 수에 따른 이하의 효과를 적용한다。
PRINTL ●１개：자신 필드의 "요선수" 몬스터의 공격력은 턴 종료시까지 ３００오른다。
PRINTL ●３개：자신의 덱 / 묘지에서 "요선수" 카드 １장을 선택해 패에 넣는다。

@CARDCAN_75231(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,75231)
SIF RESULT == 1
	RETURN 0

IF 종류 == 지속효과
	SIF ゾーン == "마함"
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	RETURN 1
ELSEIF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF 효과발동済(듀얼리스트,場所,ゾーン)
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_個Ｃ:場所") < 1
		RETURN 0
	IF GETVAR(@"%듀얼리스트%_魔_個Ｃ:場所") < 3
		CALL FULLRESET
		효과範囲필드 = 1
		효과条件カテゴリ = 요선수
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
	ENDIF
	RETURN 1
ELSEIF 종류 == 마함起動 || 종류 == 손패起動
	IF 종류 == 마함起動
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
			RETURN 0
	ENDIF
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	RETURN 1
ELSEIF 종류 == 소환強制誘発
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") >= 2
		RETURN 0
	SIF 最終소환決者 != 듀얼리스트
		RETURN 0
	SIF 最終소환타입 == ""
		RETURN 0
	CALLFORM CARDNAME_{最終소환ID}("カテゴリ") 
	SIF !MATCH(RESULTS,"요선수")
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_75231(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カードID
#DIM DYNAMIC 발동불가,2
#DIM DYNAMIC 選択

IF 종류 == 지속효과
	CALL FULLRESET
	효과条件カテゴリ = 요선수
	효과条件종류 = モン全般
	CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"対耐")
ELSEIF  종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,75231,10)
	IF RESULT == 0
		;場に요선수がなければ強化효과は使えない
		CALL FULLRESET
		효과範囲필드 = 1
		효과条件カテゴリ = 요선수
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			발동불가:0 = 1
		;카운터が３つ以上なければサーチ효과は使えない
		SIF GETVAR(@"%듀얼리스트%_魔_個Ｃ:場所") < 3
			발동불가:1 = 1
		;덱or묘지に요선수がなければサーチ효과は使えない
		CALL FULLRESET
		효과範囲덱 = 1
		효과範囲묘지 = 1
		효과条件カテゴリ = 요선수
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			발동불가:1 = 1

		IF 듀얼리스트 == "자신" && (발동불가:0 == 0 || 발동불가:1 == 0)
			PRINTFORML 개별 카운터를 몇개 제거하시겠습니까？（현재의 개별 카운터{GETVAR(@"%듀얼리스트%_魔_個Ｃ:場所")}개）
			SIF 발동불가:0 == 0
				PRINTL [0] ●１개：자신 필드의 "요선수" 몬스터의 공격력은 턴 종료시까지 ３００ 오른다。
			SIF 발동불가:1 == 0
				PRINTL [1] ●３개：자신의 덱 / 묘지에서 "요선수" 카드 １장을 선택해 패에 넣는다。
			BINPUT
		ENDIF
		IF RESULT == 1 || (듀얼리스트 == "상대" && 발동불가:1 == 0)
			CALL SET_FIELD_INFO(듀얼리스트,"마함",場所,"個Ｃ",-3)
			CALL FULLRESET
			효과範囲덱 = 1
			효과範囲묘지 = 1
			효과条件カテゴリ = 요선수
			CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
		ELSEIF RESULT == 0 || (듀얼리스트 == "상대" && 발동불가:0 == 0)
			CALL SET_FIELD_INFO(듀얼리스트,"마함",場所,"個Ｃ",-1)
			효과条件カテゴリ = 요선수
			CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"一攻",300)
		ENDIF
	ENDIF
ELSEIF 종류 == 마함起動 || 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,75231,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,마함行き)
	ENDIF
ELSEIF 종류 == 소환強制誘発
	PRINTFORML 수험의 요사에 카운터가 놓였습니다。
	CALL SET_FIELD_INFO(듀얼리스트,"마함",場所,"個Ｃ",1)
ENDIF