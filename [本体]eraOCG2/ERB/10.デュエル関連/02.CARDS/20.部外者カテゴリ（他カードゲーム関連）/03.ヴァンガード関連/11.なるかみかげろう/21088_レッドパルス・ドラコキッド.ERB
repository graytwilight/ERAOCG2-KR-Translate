@CARDNAME_21088,参照先
;ココで지정카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 레드펄스 드래고키드
	CASE "略称"
		RESULTS = 레드펄스
	CASE "カテゴリ"
		RESULTS:0 = 카게로우
		RESULTS:4 = 뱅가드
ENDSELECT


@CARD_21088(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "외부자"
		RETURN 1
	CASE "종류"

		RETURN 효과モン
	CASE "속성"
		RETURN 화염속성
	CASE "종족"
		RETURN 드래곤족
	CASE "レベル"
		RETURN 3
	CASE "攻撃力"
		RETURN 1000
	CASE "守備力"
		RETURN 500
	CASE "튜너"
		RETURN 1
	CASE "성별"
		RETURN 雄性
ENDSELECT
RETURN 0

