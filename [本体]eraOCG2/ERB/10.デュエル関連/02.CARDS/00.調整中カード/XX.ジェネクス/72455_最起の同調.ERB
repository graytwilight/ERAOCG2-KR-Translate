@CARDCAN_72455(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,72455)
SIF RESULT == 1
	RETURN 0
IF 종류 == 마함起動 || 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,72455)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	;最低でもモンスター1枚あればOK
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件レベル = 3
	효과条件튜너 = 1
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_72455(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM 소환カード

IF 종류 == 마함起動 || 종류 == 손패起動
	;カード발동確認
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,72455,1)
	IF RESULT == 0
		;通常마법汎用발동後묘지送り処理
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件レベル = 3
		효과条件튜너 = 1
		효과추가종류 = 10 + 破壊行き
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)	
		IF RESULT == 1
			PRINTFORML 『RETURN 0;』
			TRYCALLFORM CARD_{RESULT:1}("종류")
			IF RESULT == 通常モン
				CALL FULLRESET
				효과範囲손패 = 1
				CALL 효과条件レベル_ADV(3, "以下")
				효과추가종류 = 10 + 破壊行き
				CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)	
				PRINTFORML 『RETURN 1;』
			ENDIF
		ENDIF
	ENDIF
ENDIF