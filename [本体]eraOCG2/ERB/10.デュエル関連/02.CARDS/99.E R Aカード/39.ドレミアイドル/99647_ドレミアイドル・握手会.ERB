@CARDCAN_99647(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,99647)
SIF RESULT == 1
	RETURN 0

;IF 종류 == 마함起動 || 종류 == フリー誘発
IF 종류 == フリー誘発
	SIF ゾーン != "마함"
		RETURN 0
	SIF 발동済_1(듀얼리스트,99647)
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과条件カテゴリ:0 = 큐티아최애
	효과条件カテゴリ:1 = 드리미아최애
	효과条件カテゴリ:2 = 엘리티아최애
	효과条件カテゴリ:3 = 팬시아최애
	효과条件カテゴリ:4 = 그레이시아최애
	효과条件カテゴリ:5 = 엔제리아최애
	효과条件カテゴリ:6 = 뷰티아최애
	효과条件カテゴリ:7 = 쿨리아최애
	효과条件カテゴリ:8 = 뮤제시아최애
	효과条件カテゴリ:9 = 도레미 하코오시
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과条件固カテゴリ:0 = 큐티아최애
	효과条件固カテゴリ:1 = 드리미아최애
	효과条件固カテゴリ:2 = 엘리티아최애
	효과条件固カテゴリ:3 = 팬시아최애
	효과条件固カテゴリ:4 = 그레이시아최애
	효과条件固カテゴリ:5 = 엔제리아최애
	효과条件固カテゴリ:6 = 뷰티아최애
	효과条件固カテゴリ:7 = 쿨리아최애
	효과条件固カテゴリ:8 = 뮤제시아최애
	효과条件固カテゴリ:9 = 도레미 하코오시
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 묘지起動
	SIF 발동済_1(듀얼리스트,99647)
		RETURN 0
	SIF ゾーン != "묘지"
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과条件종류 = モン全般
	효과条件표시 = 表側표시
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件종류 = モン全般
	효과条件カテゴリ = 도레미아이돌
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF



@CARDEFFECT_99647(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択場所
#DIM DYNAMIC 選択상대場所
#DIM DYNAMIC レベル
#DIM DYNAMIC 조교대상
#DIM DYNAMIC 実行役대상

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 마함起動 || 종류 == フリー誘発
	;卡片发动確認
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,99647,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)

		CALL FULLRESET
		효과範囲상대필드 = 1
		효과条件종류 = モン全般
		효과条件표시 = 表側표시
		효과条件固カテゴリ:0 = 큐티아최애
		효과条件固カテゴリ:1 = 드리미아최애
		효과条件固カテゴリ:2 = 엘리티아최애
		효과条件固カテゴリ:3 = 팬시아최애
		효과条件固カテゴリ:4 = 그레이시아최애
		효과条件固カテゴリ:5 = 엔제리아최애
		효과条件固カテゴリ:6 = 뷰티아최애
		효과条件固カテゴリ:7 = 쿨리아최애
		효과条件固カテゴリ:8 = 뮤제시아최애
		효과条件固カテゴリ:9 = 도레미 하코오시
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"全場単体",場所,"손패")

		PRINTFORML
		PRINTFORML 팬들이、악수회에서 소동을 일으킨 사람을 쫒아냈습니다！
		PRINTFORMW
	ENDIF

ELSEIF 종류 == 묘지起動
;卡片发动確認
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,99647,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)

		CALL FULLRESET
		효과条件종류 = モン全般
		효과条件표시 = 表側표시
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"상대필드",ゾーン,場所)
		選択상대場所 = RESULT

		CALL FULLRESET
		효과条件종류 = モン全般
		효과条件カテゴリ = 도레미아이돌
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"필드",ゾーン,場所)
		選択場所 = RESULT

		IF 選択상대場所 != 9999 &&  選択상대場所 != 9999
			CALL CARD_EROTICS_FIELD(듀얼리스트,"필드",選択場所)
			IF RESULT != -1
				조교대상 = RESULT
				CALL Doremi_fans(듀얼리스트,選択상대場所,조교대상,"握手会")
			ENDIF
		ENDIF
	ENDIF
ENDIF