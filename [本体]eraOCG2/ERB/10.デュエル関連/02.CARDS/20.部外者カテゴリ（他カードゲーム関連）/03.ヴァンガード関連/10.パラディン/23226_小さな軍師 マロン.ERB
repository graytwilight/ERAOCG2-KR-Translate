PRINTL 그 몬스터의 공격력은 턴 종료시까지 １４００오른다。


@CARDCAN_23226(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 발동불가,2

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,23226)
SIF RESULT == 1
	RETURN 0

IF 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,23226)
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,23226,"손패")
	SIF RESULT == 1
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲EX덱 = 1
	효과条件カテゴリ:0 = 블래스터 블레이드
	효과条件カテゴリ:0 = 알프레드
	효과条件종류 = モン全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 소환時 || 종류 == 특수소환時
	SIF 발동済_2(듀얼리스트,23226)
		RETURN 0
		
	CALL FULLRESET
	효과範囲마함 = 1
	효과範囲묘지 = 1
	효과条件名前 = 성역의 기사단
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	IF RESULT != 1
		SIF 마함数(듀얼리스트) >= 5
			RETURN 0
		CALL FULLRESET
		효과範囲덱 = 1
		효과範囲손패 = 1
		효과範囲묘지 = 1
		효과条件名前 = 성역의 기사단
		효과条件うらら解除 = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
		CALL CARD_DRAW_CHECK(1)
	ELSE
		SIF 마함数(듀얼리스트) >= 5
			발동불가:0 = 1
		CALL FULLRESET
		효과範囲덱 = 1
		효과範囲손패 = 1
		효과範囲묘지 = 1
		효과条件名前 = 성역의 기사단
		효과条件うらら解除 = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			발동불가:0 = 1
		SIF GETVAR(@"%듀얼리스트%_ドロー불가") >= 1
			발동불가:1 = 1
		SIF 발동불가:0 == 1 && 발동불가:1 == 1
			RETURN 0
		CALL CARD_DRAW_CHECK(1)
	ENDIF
	RETURN 1
ELSEIF 종류 == 攻撃時誘発
	SIF 발동済_3(듀얼리스트,23226)
		RETURN 0
	SIF !GROUPMATCH(ゾーン,"손패","필드")
		RETURN 0
	SIF 戦闘場所(듀얼리스트) == 5
		RETURN 0
	CALLFORM CARDNAME_{戦闘カードID(듀얼리스트)}("カテゴリ")
	SIF !MATCH(RESULTS, "블래스터 블레이드")
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_23226(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 攻撃力上昇
#DIM DYNAMIC 戦闘カード
#DIM DYNAMIC 選択횟수
#DIM DYNAMIC 選択結果

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,23226,1)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_SP_SUMMON(듀얼리스트,"손패",場所)
	ENDIF
ELSEIF 종류 == 소환時 || 종류 == 특수소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,23226,2)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲마함 = 1
		효과範囲묘지 = 1
		효과条件名前 = 성역의 기사단
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		IF RESULT != 1
			選択結果 = はい
		ELSE
			CALL FULLRESET
			효과範囲덱 = 1
			효과範囲손패 = 1
			효과範囲묘지 = 1
			효과条件名前 = 성역의 기사단
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			IF RESULT != 1
				CUSTOMDRAWLINE -
				PRINTL 「성역의 기사단」をセットできないため、ドローを行います。
				CUSTOMDRAWLINE -
				PRINTW 
				選択結果 = いいえ
			ELSE
				IF 듀얼리스트 == "상대"
					選択結果 = いいえ
				ELSE
					PRINTL 「성역의 기사단」をセットしますか？
					CALL YN_CHOICE(듀얼리스트)
					選択結果 = RESULT
				ENDIF
			ENDIF
		ENDIF
		IF 選択結果 == はい
			CALL FULLRESET
			효과範囲덱 = 1
			효과範囲손패 = 1
			효과範囲묘지 = 1
			효과条件名前 = 성역의 기사단
			CALL CARD_SET_ADV(듀얼리스트,ゾーン,場所,"表側표시")
		ELSE
			CALL CARDDRAW_BASIC(듀얼리스트,1)
		ENDIF
	ENDIF
ELSEIF 종류 == 발동誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,23226,3)
	IF RESULT == 0
		戦闘カード = 戦闘場所(듀얼리스트)
		CALL FULLRESET
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL SET_FIELD_INFO(듀얼리스트,"필드",戦闘カード,"一攻",1400)
	ENDIF
ENDIF
