@CARDCAN_57911(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 지속효과
	SIF !GROUPMATCH(ゾーン,"필드","마함")
		RETURN 0
	RETURN 1
ENDIF

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,57911)
SIF RESULT == 1
	RETURN 0

IF 종류 == EX덱起動
	SIF 발동済_1(듀얼리스트,57911)
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		RETURN 0
	CALL FULLRESET
	효과範囲마함 = 1
	효과条件名前 = 아미야
	효과条件종류 = 효과モン
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲마함 = 1
	효과条件カテゴリ = 오퍼레이터
	효과条件표시 = 表側표시
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT < 6
		RETURN 0
	RETURN 1

ELSEIF 종류 == 소환誘発
	SIF !GROUPMATCH(ゾーン,"필드","마함")
		RETURN 0
	SIF 효과발동済(듀얼리스트,場所,ゾーン)
		RETURN 0
	SIF 最終소환決者 == 듀얼리스트
		RETURN 0
	SIF 最終소환타입 == ""
		RETURN 0
	RETURN 1

ELSEIF 종류 == 身代효과
	SIF 발동済_3(듀얼리스트,57911)
		RETURN 0
	SIF !GROUPMATCH(ゾーン,"필드","마함")
		RETURN 0
	TRYCALLFORM CARDNAME_{破壊대상ID}("カテゴリ")
	SIF !MATCH(RESULTS,"오퍼레이터")
		RETURN 0
	SIF !GROUPMATCH(破壊종류,"효과","戦闘")
		RETURN 0
	RETURN 1

ELSEIF 종류 == 攻守変動
	SIF !GROUPMATCH(ゾーン,"필드","마함")
		RETURN 0
	IF ゾーン == "필드"
		SIF GETVAR(@"%듀얼리스트%_MZ_T1汎数:場所") <= 0
			RETURN 0
	ELSEIF ゾーン == "마함"
		SIF GETVAR(@"%듀얼리스트%_魔_T1汎数:場所") <= 0
			RETURN 0
	ENDIF
	RETURN 1
ENDIF


@CARDEFFECT_57911(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 攻撃力修正

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == EX덱起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,57911,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲마함 = 1
		효과条件名前 = 아미야
		효과条件종류 = 효과モン
		효과条件行先플래그 = 제외行き
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			CALL CARD_ADD(듀얼리스트,"EX덱", "마함", 場所,"表側표시")
		ENDIF
	ENDIF

ELSEIF 종류 == 소환誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,57911,11)
	IF RESULT == 0
		攻撃力修正 = モンスター数(対面者) + 마함数(対面者)
		CALL SET_FIELD_INFO(듀얼리스트,ゾーン,場所,"T1汎数",攻撃力修正)
		CALL FULLRESET
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"自動処理",最終소환場所,"完全묘지")
	ENDIF

ELSEIF 종류 == 身代효과
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,57911,3)
	IF RESULT == 0
		CALL FULLRESET
		효과条件カテゴリ = 오퍼레이터
		CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"破耐",6)
		CALL STATCHANGE_EFFECT(듀얼리스트,"마함",場所,"破耐",6)
		RETURN 1
	ENDIF
	RETURN 0

ELSEIF 종류 == 攻守変動
	IF ゾーン == "필드"
		攻撃力修正 = GETVAR(@"%듀얼리스트%_MZ_T1汎数:場所") * 500
	ELSEIF ゾーン == "마함"
		攻撃力修正 = GETVAR(@"%듀얼리스트%_魔_T1汎数:場所") * 500
	ENDIF
	CALL FULLRESET
	CALL STATCHANGE_BASIC(듀얼리스트,"상대필드",場所,攻撃力修正,攻撃力修正)
ENDIF
